<script>
// ===========================================
// SITARA BUILDERS CRM - ENTERPRISE EDITION
// Version 3.0 - Complete Financial CRM System
// ===========================================

// Database Configuration
const STORAGE_KEY = 'sitara_crm_v3';
const BACKUP_KEY = 'sitara_crm_backups_v3';
const MAX_BACKUPS = 50;
const STORAGE_FOLDER = 'C:/ST/SitaraCRM/';
const BACKUP_FOLDER = 'C:/ST/SitaraCRM/Backups/';
let fileHandle = null;
let backupHandle = null;
let fileDirectoryHandle = null;
let autoSaveEnabled = true;
let autoSaveInterval = 300000; // 5 minutes



// Core Database Structure
let db = {
  version: '3.0',
  customers: [],
  projects: [],
  interactions: [],
  receipts: [],
  masterProjects: [], // NEW: Master projects inventory
  inventoryUnits: [], // NEW: Individual units
  settings: {
    currency: 'PKR',
    defaultCycle: 'bi_annual',
    followUpDays: [1, 3, 7, 14, 30],
    commissionRate: 2.5 // Percentage
  },
  lastUpdated: null
};

// Pagination Configuration
const ITEMS_PER_PAGE = 15;

// State Management
let currentPage = {
  customers: 1,
  projects: 1,
  interactions: 1,
  receipts: 1
};

// Utility Functions
function generateId(prefix = 'id') {
  return `${prefix}_${Date.now()}_${Math.random().toString(36).substr(2, 9)}`;
}

function formatCurrency(amount) {
  const num = Number(amount) || 0;
  return `PKR ${num.toLocaleString('en-PK', {
    minimumFractionDigits: 0,
    maximumFractionDigits: 0
  })}`;
}




async function initFileStorage() {
  try {
    // Check if we have previously saved a directory handle
    const savedHandle = localStorage.getItem('sitara_directory_handle');
    if (savedHandle) {
      try {
        // Try to restore the directory handle
        const handleData = JSON.parse(savedHandle);
        fileDirectoryHandle = await navigator.storage.getDirectory();
        console.log('Restored directory access');
        return true;
      } catch (e) {
        console.warn('Could not restore directory handle:', e);
        localStorage.removeItem('sitara_directory_handle');
      }
    }
    
    // Check if File System Access API is available
    if (typeof window.showDirectoryPicker !== 'function') {
      console.log('File System Access API not available, using downloads');
      return false;
    }
    
    // Don't auto-prompt on load - wait for user action
    return false;
    
  } catch (error) {
    console.error('File storage init error:', error);
    return false;
  }
}








// Ensure this function is defined before it's called
function isOverdue(dateStr) {
  try {
    if (!dateStr) return false;
    const dueDate = new Date(dateStr);
    const today = new Date();
    today.setHours(0, 0, 0, 0);
    dueDate.setHours(0, 0, 0, 0);
    return dueDate < today;
  } catch (error) {
    console.error('Error in isOverdue:', error);
    return false;
  }
}



async function setupAutoSaveDirectory() {
  try {
    if (typeof window.showDirectoryPicker !== 'function') {
      showNotification('info', 'Auto-save Info', 
        'Your browser does not support automatic file saving. Files will be downloaded instead.');
      return false;
    }
    
    // Ask user to choose a directory once
    fileDirectoryHandle = await window.showDirectoryPicker({
      startIn: 'documents',
      id: 'sitara-crm-storage'
    });
    
    // Request persistent permission
    if (await fileDirectoryHandle.requestPermission({ mode: 'readwrite' }) !== 'granted') {
      showNotification('error', 'Permission Denied', 
        'Could not get write permission for the selected directory.');
      return false;
    }
    
    // Save the directory handle for future use
    // Note: In real implementation, we'd need to store the handle
    // Since we can't serialize file handles, we'll use a different approach
    
    // Create a marker file to remember this directory
    try {
      const markerFile = await fileDirectoryHandle.getFileHandle('sitara_marker.txt', { create: true });
      const writable = await markerFile.createWritable();
      await writable.write('Sitara CRM Storage Directory - ' + new Date().toISOString());
      await writable.close();
    } catch (e) {
      console.log('Could not create marker file:', e);
    }
    
    localStorage.setItem('sitara_auto_save_path', 'configured');
    localStorage.setItem('sitara_auto_save_enabled', 'true');
    
    showNotification('success', 'Auto-save Configured', 
      'Directory selected. System will auto-save without prompting.');
    
    return true;
    
  } catch (error) {
    if (error.name === 'AbortError') {
      console.log('User cancelled directory selection');
      return false;
    }
    console.error('Directory setup error:', error);
    showNotification('error', 'Setup Failed', error.message);
    return false;
  }
}









// Save to local file
async function saveToFile() {
  try {
    const data = {
      db: db,
      version: '3.1',
      timestamp: new Date().toISOString()
    };
    
    const dataStr = JSON.stringify(data, null, 2);
    const blob = new Blob([dataStr], { type: 'application/json' });
    
    // Create backup filename with timestamp
    const timestamp = new Date().toISOString().replace(/[:.]/g, '-');
    const filename = `sitara_crm_${timestamp}.json`;
    
    // Method 1: Try File System Access API
    if (typeof window.showSaveFilePicker === 'function') {
      try {
        const handle = await window.showSaveFilePicker({
          suggestedName: filename,
          types: [{
            description: 'JSON Files',
            accept: { 'application/json': ['.json'] }
          }]
        });
        
        const writable = await handle.createWritable();
        await writable.write(blob);
        await writable.close();
        
        console.log('Saved to file:', filename);
        return true;
      } catch (userCancel) {
        console.log('User cancelled file save');
        return false;
      }
    }
    
    // Method 2: Fallback to download
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = filename;
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    URL.revokeObjectURL(url);
    
    // Also save to localStorage as backup
    try {
      localStorage.setItem('sitara_last_backup', new Date().toISOString());
    } catch (e) {
      // Ignore localStorage errors
    }
    
    return true;
  } catch (error) {
    console.error('File save error:', error);
    return false;
  }
}

// Auto-save to file periodically
async function autoSaveToFile() {
  if (!autoSaveEnabled) return;
  
  try {
    // Create backup filename with timestamp
    const timestamp = new Date().toISOString().replace(/[:.]/g, '-');
    const filename = `sitara_backup_${timestamp}.json`;
    
    // Prepare data
    const backupData = {
      db: db,
      version: '3.1',
      timestamp: new Date().toISOString(),
      summary: {
        customers: db.customers.length,
        projects: db.projects.length,
        interactions: db.interactions.length,
        receipts: db.receipts.length,
        masterProjects: db.masterProjects?.length || 0,
        inventoryUnits: db.inventoryUnits?.length || 0
      }
    };
    
    const dataStr = JSON.stringify(backupData, null, 2);
    const blob = new Blob([dataStr], { type: 'application/json' });
    
    // Try to save to local storage first (for quick access)
    try {
      const compactData = createCompactStorageData();
      localStorage.setItem(STORAGE_KEY, JSON.stringify(compactData));
      localStorage.setItem('sitara_last_auto_save', new Date().toISOString());
    } catch (e) {
      // Ignore localStorage errors
    }
    
    // Method 1: Try to save to configured directory (silent - no prompts)
    if (localStorage.getItem('sitara_auto_save_path') === 'configured') {
      try {
        // This is a simplified approach since we can't persistently store file handles
        // In a real app, you'd use the File System Access API with persisted handles
        // For now, we'll use the download method but without prompts
        
        // Create download link and trigger it programmatically
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = filename;
        a.style.display = 'none';
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        
        // Clean up
        setTimeout(() => URL.revokeObjectURL(url), 1000);
        
        console.log('Auto-saved backup:', filename);
        return true;
        
      } catch (error) {
        console.warn('Auto-save to directory failed:', error);
      }
    }
    
    // Method 2: Download to default downloads folder (no prompt)
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = filename;
    a.style.display = 'none';
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    
    // Clean up
    setTimeout(() => URL.revokeObjectURL(url), 1000);
    
    console.log('Auto-saved to downloads:', filename);
    return true;
    
  } catch (error) {
    console.error('Auto-save failed:', error);
    return false;
  }
}






async function manualSaveToFile(showPrompt = false) {
  try {
    const timestamp = new Date().toISOString().replace(/[:.]/g, '-');
    const defaultFilename = `sitara_backup_${timestamp}.json`;
    
    const backupData = {
      db: db,
      version: '3.1',
      timestamp: new Date().toISOString()
    };
    
    const dataStr = JSON.stringify(backupData, null, 2);
    const blob = new Blob([dataStr], { type: 'application/json' });
    
    if (showPrompt && typeof window.showSaveFilePicker === 'function') {
      try {
        const handle = await window.showSaveFilePicker({
          suggestedName: defaultFilename,
          types: [{
            description: 'JSON Files',
            accept: { 'application/json': ['.json'] }
          }]
        });
        
        const writable = await handle.createWritable();
        await writable.write(blob);
        await writable.close();
        
        showNotification('success', 'Saved', 'Backup saved successfully.');
        return true;
      } catch (userCancel) {
        console.log('User cancelled save');
        return false;
      }
    }
    
    // Silent download (no prompt)
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = defaultFilename;
    a.style.display = 'none';
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    URL.revokeObjectURL(url);
    
    showNotification('success', 'Backup Created', 'Backup saved to downloads folder.');
    return true;
    
  } catch (error) {
    console.error('Manual save failed:', error);
    showNotification('error', 'Save Failed', error.message);
    return false;
  }
}










async function manageStorage() {
  const modal = document.createElement('div');
  modal.className = 'modal show';
  
  // Load current settings
  const currentInterval = parseInt(localStorage.getItem('sitara_auto_save_interval') || '300000');
  const currentEnabled = localStorage.getItem('sitara_auto_save_enabled') !== 'false';
  const intervalMinutes = currentInterval / 60000;
  
  const lastSave = localStorage.getItem('sitara_last_auto_save');
  const lastSaveText = lastSave ? formatDateTime(lastSave) : 'Never';
  
  const isConfigured = localStorage.getItem('sitara_auto_save_path') === 'configured';
  
  let html = `
    <div class="modal-content" style="max-width: 700px;">
      <div class="modal-header">
        <h3 class="modal-title">üíæ Auto-save Settings</h3>
        <button class="btn btn-sm btn-secondary" onclick="this.closest('.modal').remove()">‚úï</button>
      </div>
      <div class="modal-body">
        <!-- Status -->
        <div class="alert ${currentEnabled ? 'alert-success' : 'alert-warning'} mb-4">
          <strong>Auto-save Status:</strong> ${currentEnabled ? 'ENABLED' : 'DISABLED'}
          ${currentEnabled ? ` (every ${intervalMinutes} minutes)` : ''}
          <br><strong>Last Auto-save:</strong> ${lastSaveText}
          ${isConfigured ? '<br>‚úÖ Directory configured for silent saves' : ''}
        </div>
        
        <!-- Auto-save Configuration -->
        <div class="mb-4">
          <h4>Auto-save Configuration</h4>
          <div class="form-grid">
            <div class="form-group">
              <label class="form-label">Auto-save Interval</label>
              <select id="autoSaveIntervalSelect" class="form-control">
                <option value="1" ${intervalMinutes === 1 ? 'selected' : ''}>Every 1 minute</option>
                <option value="5" ${intervalMinutes === 5 ? 'selected' : ''}>Every 5 minutes</option>
                <option value="10" ${intervalMinutes === 10 ? 'selected' : ''}>Every 10 minutes</option>
                <option value="15" ${intervalMinutes === 15 ? 'selected' : ''}>Every 15 minutes</option>
                <option value="30" ${intervalMinutes === 30 ? 'selected' : ''}>Every 30 minutes</option>
                <option value="60" ${intervalMinutes === 60 ? 'selected' : ''}>Every 60 minutes</option>
              </select>
            </div>
            
            <div class="form-group">
              <label class="form-label">Auto-save Mode</label>
              <div class="d-flex flex-column gap-2">
                <label style="display: flex; align-items: center; gap: 8px;">
                  <input type="radio" name="autoSaveMode" value="enabled" 
                         ${currentEnabled ? 'checked' : ''} 
                         onchange="toggleAutoSave(true)">
                  <span>Enabled (Auto-save silently)</span>
                </label>
                <label style="display: flex; align-items: center; gap: 8px;">
                  <input type="radio" name="autoSaveMode" value="disabled" 
                         ${!currentEnabled ? 'checked' : ''} 
                         onchange="toggleAutoSave(false)">
                  <span>Disabled (Manual saves only)</span>
                </label>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Directory Setup -->
        ${!isConfigured ? `
          <div class="alert alert-info mb-4">
            <strong>Setup Silent Saves:</strong> 
            Configure a directory once to enable completely silent auto-saving.
          </div>
          <button class="btn btn-primary mb-4" onclick="setupAutoSaveDirectory()">
            üìÅ Configure Auto-save Directory
          </button>
        ` : ''}
        
        <!-- Quick Actions -->
        <div class="mb-4">
          <h4>Quick Actions</h4>
          <div class="d-flex gap-2 flex-wrap">
            <button class="btn btn-success" onclick="saveToStorage(true); showNotification('success', 'Saved', 'Data saved silently');">
              üíæ Save Now (Silent)
            </button>
            <button class="btn btn-primary" onclick="manualSaveToFile(true);">
              üíæ Save As... (Choose Location)
            </button>
            <button class="btn btn-warning" onclick="clearOldLocalStorage()">
              üóëÔ∏è Clear Browser Cache
            </button>
            <button class="btn btn-info" onclick="viewBackupFiles()">
              üìÇ View Backups
            </button>
          </div>
        </div>
        
        <!-- Advanced Options -->
        <div class="mt-4">
          <button class="btn btn-sm btn-secondary" onclick="toggleAdvancedOptions()">
            ‚öôÔ∏è Advanced Options
          </button>
          <div id="advancedOptions" style="display: none; margin-top: 16px;">
            <div class="form-grid">
              <div class="form-group">
                <label class="form-label">Max Backups to Keep</label>
                <input type="number" id="maxBackups" class="form-control" 
                       value="${localStorage.getItem('sitara_max_backups') || '50'}" 
                       min="1" max="1000">
              </div>
              <div class="form-group">
                <label class="form-label">Backup Compression</label>
                <select id="compressionLevel" class="form-control">
                  <option value="none">No Compression (Faster)</option>
                  <option value="light">Light Compression</option>
                  <option value="heavy">Heavy Compression (Smaller files)</option>
                </select>
              </div>
            </div>
            <button class="btn btn-sm btn-primary mt-2" onclick="saveAdvancedSettings()">
              Save Advanced Settings
            </button>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" onclick="this.closest('.modal').remove()">Close</button>
      </div>
    </div>
  `;
  
  modal.innerHTML = html;
  document.body.appendChild(modal);
  
  // Set initial interval select value
  setTimeout(() => {
    const intervalSelect = document.getElementById('autoSaveIntervalSelect');
    if (intervalSelect) {
      intervalSelect.value = intervalMinutes.toString();
      intervalSelect.onchange = function() {
        const minutes = parseInt(this.value);
        updateAutoSaveSettings(minutes, currentEnabled);
      };
    }
  }, 100);
}

function toggleAutoSave(enabled) {
  const intervalSelect = document.getElementById('autoSaveIntervalSelect');
  const minutes = intervalSelect ? parseInt(intervalSelect.value) : 5;
  updateAutoSaveSettings(minutes, enabled);
}

function toggleAdvancedOptions() {
  const adv = document.getElementById('advancedOptions');
  adv.style.display = adv.style.display === 'none' ? 'block' : 'none';
}

function saveAdvancedSettings() {
  const maxBackups = document.getElementById('maxBackups').value;
  const compression = document.getElementById('compressionLevel').value;
  
  localStorage.setItem('sitara_max_backups', maxBackups);
  localStorage.setItem('sitara_compression', compression);
  
  showNotification('success', 'Settings Saved', 'Advanced settings updated.');
}

function clearOldLocalStorage() {
  if (confirm('Clear old browser cache? This will not delete your data files.')) {
    // Keep only essential items
    const keepKeys = [
      STORAGE_KEY,
      'sitara_auto_save_interval',
      'sitara_auto_save_enabled',
      'sitara_auto_save_path',
      'sitara_last_auto_save'
    ];
    
    for (let i = 0; i < localStorage.length; i++) {
      const key = localStorage.key(i);
      if (!keepKeys.includes(key) && key.startsWith('sitara_')) {
        localStorage.removeItem(key);
      }
    }
    
    showNotification('success', 'Cache Cleared', 'Old cache data removed.');
  }
}

function viewBackupFiles() {
  showNotification('info', 'Backup Files', 
    'Backup files are saved to your Downloads folder as "sitara_backup_YYYY-MM-DD-HH-MM-SS.json"');
}








function updateStorageStatus() {
  try {
    const indicator = document.getElementById('storageIndicator');
    const text = document.getElementById('storageText');
    const container = document.querySelector('.storage-status');
    
    if (!indicator || !text || !container) return;
    
    // Calculate localStorage usage
    let localStorageBytes = 0;
    for (let i = 0; i < localStorage.length; i++) {
      const key = localStorage.key(i);
      const value = localStorage.getItem(key);
      localStorageBytes += key.length + value.length;
    }
    
    const localStorageMB = (localStorageBytes / (1024 * 1024)).toFixed(2);
    const maxLocalStorageMB = 5;
    const localStoragePercent = (localStorageBytes / (maxLocalStorageMB * 1024 * 1024)) * 100;
    
    let status = 'ok';
    let message = `Storage: ${localStorageMB}MB`;
    
    if (localStoragePercent > 90) {
      status = 'danger';
      message = `STORAGE FULL! ${localStorageMB}MB`;
    } else if (localStoragePercent > 70) {
      status = 'warning';
      message = `Storage: ${localStorageMB}MB (${Math.round(localStoragePercent)}%)`;
    }
    
    // Update indicator
    indicator.style.background = status === 'ok' ? 'var(--success)' :
                                 status === 'warning' ? 'var(--warning)' : 'var(--danger)';
    
    // Update text
    text.textContent = message;
    
    // Update container class
    container.className = `storage-status ${status === 'ok' ? '' : status}`;
    
  } catch (error) {
    console.warn('Could not update storage status:', error);
  }
}

// Update status periodically
setInterval(updateStorageStatus, 60000); // Every minute
setTimeout(updateStorageStatus, 3000); 


