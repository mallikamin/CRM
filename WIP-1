      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" onclick="this.closest('.modal').remove()">
          Skip Setup
        </button>
        <button class="btn btn-primary" onclick="setupDefaultFolders(); this.closest('.modal').remove()">
          Setup Now
        </button>
      </div>
    </div>
  `;
  
  document.body.appendChild(modal);
}

// Try to create default folders (conceptual - actual folder creation requires user permission)
function setupDefaultFolders() {
  showNotification('info', 'Folder Setup', 
    'Please create the folder structure manually. The system will use it when you save files.');
  
  // Show save dialog to let user choose location
  setTimeout(() => {
    saveToFile();
  }, 1000);
}

// Check if this is first run and show guide
function checkFirstRun() {
  const firstRun = !localStorage.getItem('sitara_first_run_complete');
  if (firstRun) {
    setTimeout(() => {
      showStorageSetupGuide();
    }, 3000);
    localStorage.setItem('sitara_first_run_complete', 'true');
  }
}



function setStorageMode(mode) {
  db.settings.storageMode = mode;
  saveToStorage();
  
  showNotification('success', 'Storage Mode Updated', 
    `Storage mode set to: ${mode}`);
  
  // Refresh storage management modal
  const modal = document.querySelector('.modal.show');
  if (modal) {
    modal.remove();
    manageStorage();
  }
}




function updateAutoSaveSettings(intervalMinutes = 5, enabled = true) {
  autoSaveInterval = intervalMinutes * 60000; // Convert to milliseconds
  autoSaveEnabled = enabled;
  
  localStorage.setItem('sitara_auto_save_interval', autoSaveInterval.toString());
  localStorage.setItem('sitara_auto_save_enabled', enabled.toString());
  
  // Restart the auto-save timer
  clearInterval(window.autoSaveTimer);
  if (enabled) {
    window.autoSaveTimer = setInterval(() => saveToStorage(true), autoSaveInterval);
  }
  
  showNotification('success', 'Auto-save Updated', 
    `Auto-save ${enabled ? 'enabled' : 'disabled'} (every ${intervalMinutes} minutes)`);
}

function updateBackupRetention(count) {
  localStorage.setItem('sitara_backup_retention', count);
  showNotification('info', 'Backup Retention Updated', 
    `Keeping ${count} most recent backups`);
}











function clearItem(key) {
  if (confirm(`Are you sure you want to clear "${key}"?`)) {
    localStorage.removeItem(key);
    showNotification('success', 'Cleared', `Removed ${key} from storage.`);
  }
}

function clearOldBackups() {
  try {
    const backups = JSON.parse(localStorage.getItem(BACKUP_KEY) || '[]');
    if (backups.length === 0) {
      showNotification('info', 'No Backups', 'No backups found to clear.');
      return;
    }
    
    // Keep only the 5 most recent backups
    const recentBackups = backups.slice(0, 5);
    localStorage.setItem(BACKUP_KEY, JSON.stringify(recentBackups));
    
    showNotification('success', 'Backups Cleared', 
      `Kept ${recentBackups.length} most recent backups.`);
  } catch (e) {
    showNotification('error', 'Error', 'Could not clear backups.');
  }
}










function formatNumber(num) {
  return Number(num || 0).toLocaleString('en-PK');
}

function escapeHtml(text) {
  const div = document.createElement('div');
  div.textContent = text;
  return div.innerHTML;

}







// ===========================================
// RECONCILIATION SYSTEM
// ===========================================

// Analyze project-inventory discrepancies
function analyzeReconciliation() {
  console.log("=== ANALYZING RECONCILIATION ===");
  
  const analysis = {
    unlinkedProjects: [],
    mismatchedData: [],
    duplicateUnits: [],
    suggestions: [],
    summary: {
      totalProjects: db.projects.length,
      totalMasterProjects: db.masterProjects.length,
      totalInventoryUnits: db.inventoryUnits.length,
      soldProjects: 0,
      linkedProjects: 0,
      missingInventory: 0
    }
  };
  
  // Step 1: Find projects without inventory
  db.projects.forEach(project => {
    const projectName = project.name;
    const unitNumber = project.unit;
    
    // Find corresponding master project
    const masterProject = db.masterProjects.find(m => 
      m.name.toLowerCase() === projectName.toLowerCase()
    );
    
    // Find corresponding inventory unit
    let inventoryUnit = null;
    if (masterProject) {
      inventoryUnit = db.inventoryUnits.find(u => 
        u.masterProjectId === masterProject.id && 
        u.unitNumber.toString() === unitNumber.toString()
      );
    }
    
    if (!masterProject) {
      // Project without master project
      analysis.unlinkedProjects.push({
        projectId: project.id,
        projectName: projectName,
        unitNumber: unitNumber,
        customerId: project.customerId,
        saleValue: project.sale,
        issue: 'no_master_project',
        severity: 'high'
      });
      analysis.summary.missingInventory++;
    } else if (!inventoryUnit) {
      // Project without inventory unit
      analysis.unlinkedProjects.push({
        projectId: project.id,
        projectName: projectName,
        unitNumber: unitNumber,
        masterProjectId: masterProject.id,
        masterProjectName: masterProject.name,
        customerId: project.customerId,
        saleValue: project.sale,
        issue: 'no_inventory_unit',
        severity: 'medium'
      });
      analysis.summary.missingInventory++;
    } else {
      // Project has inventory unit - check for data mismatches
      analysis.summary.linkedProjects++;
      
      const financials = calculateProjectFinancials(project);
      const dataMismatches = [];
      
      // Check sale value mismatch
      const inventoryValue = inventoryUnit.totalValue || 0;
      const projectSale = project.sale || 0;
      const valueDiff = Math.abs(inventoryValue - projectSale);
      const valueDiffPercent = projectSale > 0 ? (valueDiff / projectSale) * 100 : 0;
      
      if (valueDiffPercent > 5) { // More than 5% difference
        dataMismatches.push({
          field: 'sale_value',
          inventoryValue: inventoryValue,
          projectValue: projectSale,
          difference: valueDiff,
          percent: valueDiffPercent.toFixed(1)
        });
      }
      
      // Check size mismatch
      const inventorySize = inventoryUnit.size || 0;
      const projectMarlas = project.marlas || 0;
      const sizeDiff = Math.abs(inventorySize - projectMarlas);
      
      if (sizeDiff > 0.01) { // More than 0.01 Marla difference
        dataMismatches.push({
          field: 'size',
          inventoryValue: inventorySize,
          projectValue: projectMarlas,
          difference: sizeDiff
        });
      }
      
      // Check rate mismatch
      const inventoryRate = inventoryUnit.rate || 0;
      const projectRate = project.rate || 0;
      const rateDiff = Math.abs(inventoryRate - projectRate);
      const rateDiffPercent = projectRate > 0 ? (rateDiff / projectRate) * 100 : 0;
      
      if (rateDiffPercent > 5) {
        dataMismatches.push({
          field: 'rate',
          inventoryValue: inventoryRate,
          projectValue: projectRate,
          difference: rateDiff,
          percent: rateDiffPercent.toFixed(1)
        });
      }
      
      if (dataMismatches.length > 0) {
        analysis.mismatchedData.push({
          projectId: project.id,
          projectName: projectName,
          unitNumber: unitNumber,
          inventoryUnitId: inventoryUnit.id,
          mismatches: dataMismatches
        });
      }
      
      // Check if inventory status matches project
      if (inventoryUnit.status !== 'sold') {
        analysis.mismatchedData.push({
          projectId: project.id,
          projectName: projectName,
          unitNumber: unitNumber,
          inventoryUnitId: inventoryUnit.id,
          mismatches: [{
            field: 'status',
            inventoryValue: inventoryUnit.status,
            projectValue: 'sold',
            issue: 'Inventory status should be "sold"'
          }]
        });
      }
    }
    
    // Count sold projects
    if (project.status !== 'cancelled') {
      analysis.summary.soldProjects++;
    }
  });
  
  // Step 2: Find duplicate inventory units
  const unitMap = {};
  db.inventoryUnits.forEach(unit => {
    const masterProject = db.masterProjects.find(m => m.id === unit.masterProjectId);
    if (!masterProject) return;
    
    const key = `${masterProject.name.toLowerCase()}_${unit.unitNumber}`;
    if (!unitMap[key]) {
      unitMap[key] = [];
    }
    unitMap[key].push(unit);
  });
  
  // Find duplicates
  Object.keys(unitMap).forEach(key => {
    if (unitMap[key].length > 1) {
      analysis.duplicateUnits.push({
        masterProjectName: key.split('_')[0],
        unitNumber: key.split('_')[1],
        units: unitMap[key],
        count: unitMap[key].length
      });
    }
  });
  
  // Step 3: Generate suggestions
  analysis.unlinkedProjects.forEach(item => {
    if (item.issue === 'no_master_project') {
      analysis.suggestions.push({
        type: 'create_master_project',
        projectName: item.projectName,
        unitCount: db.projects.filter(p => p.name === item.projectName).length,
        totalSaleValue: db.projects
          .filter(p => p.name === item.projectName)
          .reduce((sum, p) => sum + (p.sale || 0), 0),
        action: `Create master project "${item.projectName}" with ${db.projects.filter(p => p.name === item.projectName).length} units`
      });
    } else if (item.issue === 'no_inventory_unit') {
      const project = db.projects.find(p => p.id === item.projectId);
      analysis.suggestions.push({
        type: 'create_inventory_unit',
        masterProjectId: item.masterProjectId,
        masterProjectName: item.masterProjectName,
        unitNumber: item.unitNumber,
        size: project?.marlas || 0,
        rate: project?.rate || 0,
        saleValue: project?.sale || 0,
        action: `Create inventory unit ${item.unitNumber} for ${item.masterProjectName}`
      });
    }
  });
  
  // Sort by severity
  analysis.unlinkedProjects.sort((a, b) => {
    const severityOrder = { high: 3, medium: 2, low: 1 };
    return severityOrder[b.severity] - severityOrder[a.severity];
  });
  
  console.log("Reconciliation Analysis:", analysis);
  return analysis;
}

// Update reconciliation stats
function updateReconciliationStats() {
  const analysis = analyzeReconciliation();
  
  // Update stats cards
  document.getElementById('totalSoldProjects').textContent = analysis.summary.soldProjects;
  document.getElementById('missingInventoryUnits').textContent = analysis.summary.missingInventory;
  
  // Calculate coverage percentage
  const coveragePercent = analysis.summary.soldProjects > 0 ? 
    ((analysis.summary.linkedProjects / analysis.summary.soldProjects) * 100).toFixed(1) : 100;
  
  const coverageElement = document.getElementById('inventoryCoverage');
  if (coverageElement) {
    coverageElement.innerHTML = analysis.summary.soldProjects > 0 ? 
      `<span class="${coveragePercent < 90 ? 'negative' : 'positive'}">${coveragePercent}% covered</span>` :
      '<span class="positive">100% covered</span>';
  }
  
  const missingActionElement = document.getElementById('missingInventoryAction');
  if (missingActionElement && analysis.summary.missingInventory > 0) {
    missingActionElement.innerHTML = `<span class="negative">${analysis.summary.missingInventory} need attention</span>`;
  }
  
  // Show/hide reconciliation alert
  const alertElement = document.getElementById('reconciliationAlert');
  const messageElement = document.getElementById('reconciliationMessage');
  
  if (analysis.summary.missingInventory > 0 || analysis.mismatchedData.length > 0) {
    alertElement.style.display = 'block';
    const issues = [];
    if (analysis.summary.missingInventory > 0) {
      issues.push(`${analysis.summary.missingInventory} projects without inventory`);
    }
    if (analysis.mismatchedData.length > 0) {
      issues.push(`${analysis.mismatchedData.length} data mismatches`);
    }
    if (analysis.duplicateUnits.length > 0) {
      issues.push(`${analysis.duplicateUnits.length} duplicate units`);
    }
    messageElement.textContent = issues.join(', ');
  } else {
    alertElement.style.display = 'none';
  }
}




function editInventoryUnit(unitId) {
    const unit = db.inventoryUnits.find(u => u.id === unitId);
    if (!unit) return;
    
    const master = db.masterProjects.find(m => m.id === unit.masterProjectId);
    if (!master) return;
    
    // Create edit modal
    const modal = document.createElement('div');
    modal.className = 'modal show';
    
    const html = `
        <div class="modal-content" style="max-width: 800px;">
            <div class="modal-header">
                <h3 class="modal-title">‚úèÔ∏è Edit Inventory Unit</h3>
                <button class="btn btn-sm btn-secondary" onclick="this.closest('.modal').remove()">‚úï</button>
            </div>
            <div class="modal-body">
                <form id="editInventoryUnitForm" class="form-grid">
                    <input type="hidden" id="editUnitId" value="${unit.id}">
                    <input type="hidden" id="editMasterProjectId" value="${unit.masterProjectId}">
                    
                    <div class="form-group">
                        <label class="form-label">Master Project</label>
                        <input type="text" class="form-control" value="${escapeHtml(master.name)}" disabled>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Unit Number *</label>
                        <input type="text" id="editUnitNumber" class="form-control" value="${escapeHtml(unit.unitNumber)}" required>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Unit Type *</label>
                        <select id="editUnitType" class="form-control" required>
                            <option value="plot" ${unit.unitType === 'plot' ? 'selected' : ''}>Plot</option>
                            <option value="shop" ${unit.unitType === 'shop' ? 'selected' : ''}>Shop</option>
                            <option value="office" ${unit.unitType === 'office' ? 'selected' : ''}>Office</option>
                            <option value="apartment" ${unit.unitType === 'apartment' ? 'selected' : ''}>Apartment</option>
                            <option value="villa" ${unit.unitType === 'villa' ? 'selected' : ''}>Villa</option>
                            <option value="floor" ${unit.unitType === 'floor' ? 'selected' : ''}>Floor</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Size (Marla) *</label>
                        <input type="number" step="0.01" id="editUnitSize" class="form-control" 
                               value="${unit.size}" required oninput="calculateEditUnitValue()">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Rate per Marla *</label>
                        <input type="number" step="0.01" id="editUnitRate" class="form-control" 
                               value="${unit.rate}" required oninput="calculateEditUnitValue()">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Total Value</label>
                        <input type="number" step="0.01" id="editUnitTotalValue" class="form-control" 
                               value="${unit.totalValue || unit.size * unit.rate}" readonly style="background: var(--gray-100);">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Facing</label>
                        <select id="editUnitFacing" class="form-control">
                            <option value="north" ${unit.facing === 'north' ? 'selected' : ''}>North</option>
                            <option value="south" ${unit.facing === 'south' ? 'selected' : ''}>South</option>
                            <option value="east" ${unit.facing === 'east' ? 'selected' : ''}>East</option>
                            <option value="west" ${unit.facing === 'west' ? 'selected' : ''}>West</option>
                            <option value="corner" ${unit.facing === 'corner' ? 'selected' : ''}>Corner</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Status *</label>
                        <select id="editUnitStatus" class="form-control" required>
                            <option value="available" ${unit.status === 'available' ? 'selected' : ''}>Available</option>
                            <option value="reserved" ${unit.status === 'reserved' ? 'selected' : ''}>Reserved</option>
                            <option value="blocked" ${unit.status === 'blocked' ? 'selected' : ''}>Blocked</option>
                            <option value="sold" ${unit.status === 'sold' ? 'selected' : ''}>Sold</option>
                        </select>
                    </div>
                    
                    <div class="form-group" style="grid-column: 1 / -1;">
                        <label class="form-label">Remarks</label>
                        <textarea id="editUnitRemarks" class="form-control" rows="3">${escapeHtml(unit.remarks || '')}</textarea>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Linked Customer</label>
                        <select id="editUnitCustomerId" class="form-control">
                            <option value="">No Customer</option>
                            ${db.customers.filter(c => c.type === 'customer' || c.type === 'both').map(c => `
                                <option value="${c.id}" ${unit.customerId === c.id ? 'selected' : ''}>
                                    ${escapeHtml(c.name)} - ${escapeHtml(c.phone)}
                                </option>
                            `).join('')}
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Linked Broker</label>
                        <select id="editUnitBrokerId" class="form-control">
                            <option value="">No Broker</option>
                            ${db.customers.filter(c => c.type === 'broker' || c.type === 'both').map(b => `
                                <option value="${b.id}" ${unit.brokerId === b.id ? 'selected' : ''}>
                                    ${escapeHtml(b.name)} - ${escapeHtml(b.phone)}
                                </option>
                            `).join('')}
                        </select>
                    </div>
                    
                    ${unit.saleDate ? `
                        <div class="form-group">
                            <label class="form-label">Sale Date</label>
                            <input type="date" id="editUnitSaleDate" class="form-control" value="${unit.saleDate.split('T')[0]}">
                        </div>
                    ` : ''}
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="this.closest('.modal').remove()">Cancel</button>
                <button class="btn btn-primary" onclick="saveInventoryUnitEdit('${unit.id}')">Save Changes</button>
            </div>
        </div>
    `;
    
    modal.innerHTML = html;
    document.body.appendChild(modal);
    
    // Calculate initial value
    calculateEditUnitValue();
}

function calculateEditUnitValue() {
    const size = parseFloat(document.getElementById('editUnitSize')?.value) || 0;
    const rate = parseFloat(document.getElementById('editUnitRate')?.value) || 0;
    const totalValue = size * rate;
    
    const totalValueInput = document.getElementById('editUnitTotalValue');
    if (totalValueInput) {
        totalValueInput.value = totalValue.toFixed(2);
    }
}

function saveInventoryUnitEdit(unitId) {
    const unit = db.inventoryUnits.find(u => u.id === unitId);
    if (!unit) return;
    
    try {
        // Get form values
        const newUnitNumber = document.getElementById('editUnitNumber').value;
        const size = parseFloat(document.getElementById('editUnitSize').value);
        const rate = parseFloat(document.getElementById('editUnitRate').value);
        
        // Check for duplicate unit number (excluding current unit)
        const duplicate = db.inventoryUnits.find(u => 
            u.masterProjectId === unit.masterProjectId && 
            u.unitNumber === newUnitNumber && 
            u.id !== unitId
        );
        
        if (duplicate) {
            throw new Error(`Unit ${newUnitNumber} already exists in this project`);
        }
        
        // Update unit
        unit.unitNumber = newUnitNumber;
        unit.unitType = document.getElementById('editUnitType').value;
        unit.size = size;
        unit.rate = rate;
        unit.totalValue = size * rate;
        unit.facing = document.getElementById('editUnitFacing').value;
        unit.status = document.getElementById('editUnitStatus').value;
        unit.remarks = document.getElementById('editUnitRemarks').value;
        unit.customerId = document.getElementById('editUnitCustomerId').value || null;
        unit.brokerId = document.getElementById('editUnitBrokerId').value || null;
        unit.updatedAt = new Date().toISOString();
        
        // Update sale date if unit is sold
        if (unit.status === 'sold' && !unit.saleDate) {
            unit.saleDate = new Date().toISOString();
        }
        
        const saleDateInput = document.getElementById('editUnitSaleDate');
        if (saleDateInput && saleDateInput.value) {
            unit.saleDate = new Date(saleDateInput.value).toISOString();
        }
        
        // If unit status changed to sold, check if it should be linked to a project
        if (unit.status === 'sold' && !unit.customerId) {
            const master = db.masterProjects.find(m => m.id === unit.masterProjectId);
            if (master) {
                const project = db.projects.find(p => 
                    p.name === master.name && p.unit === unit.unitNumber
                );
                
                if (project) {
                    unit.customerId = project.customerId;
                    unit.brokerId = project.brokerId;
                    unit.saleDate = project.createdAt || new Date().toISOString();
                    
                    // Update project sale value to match inventory
                    if (Math.abs(project.sale - unit.totalValue) > 100) { // More than 100 difference
                        project.sale = unit.totalValue;
                        project.updatedAt = new Date().toISOString();
                    }
                }
            }
        }
        
        saveToStorage();
        
        // Close modal
        document.querySelector('.modal.show').remove();
        
        // Refresh inventory tables
        renderInventoryTables();
        
        showNotification('success', 'Unit Updated', 
            `Unit ${unit.unitNumber} has been updated.`);
        
    } catch (error) {
        showNotification('error', 'Error', error.message);
    }
}


function editMasterProject(masterId) {
    const master = db.masterProjects.find(m => m.id === masterId);
    if (!master) return;
    
    // Create edit modal
    const modal = document.createElement('div');
    modal.className = 'modal show';
    
    const html = `
        <div class="modal-content" style="max-width: 800px;">
            <div class="modal-header">
                <h3 class="modal-title">‚úèÔ∏è Edit Master Project</h3>
                <button class="btn btn-sm btn-secondary" onclick="this.closest('.modal').remove()">‚úï</button>
            </div>
            <div class="modal-body">
                <form id="editMasterProjectForm" class="form-grid">
                    <input type="hidden" id="editMasterId" value="${master.id}">
                    
                    <div class="form-group">
                        <label class="form-label">Project Name *</label>
                        <input type="text" id="editMasterName" class="form-control" value="${escapeHtml(master.name)}" required>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Project Code</label>
                        <input type="text" id="editMasterCode" class="form-control" value="${escapeHtml(master.code || '')}" 
                               placeholder="e.g., SSQ, SRH">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Location *</label>
                        <input type="text" id="editMasterLocation" class="form-control" value="${escapeHtml(master.location)}" required>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Project Type *</label>
                        <select id="editMasterType" class="form-control" required>
                            <option value="commercial" ${master.type === 'commercial' ? 'selected' : ''}>Commercial</option>
                            <option value="residential" ${master.type === 'residential' ? 'selected' : ''}>Residential</option>
                            <option value="mixed" ${master.type === 'mixed' ? 'selected' : ''}>Mixed Use</option>
                            <option value="plot" ${master.type === 'plot' ? 'selected' : ''}>Plot File</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Total Land Area (Marla)</label>
                        <input type="number" step="0.01" id="editMasterTotalArea" class="form-control" value="${master.totalArea || ''}">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Total Planned Units</label>
                        <input type="number" id="editMasterPlannedUnits" class="form-control" value="${master.plannedUnits || ''}">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Base Rate per Marla (PKR)</label>
                        <input type="number" step="0.01" id="editMasterBaseRate" class="form-control" value="${master.baseRate || ''}">
                    </div>
                    
                    <div class="form-group" style="grid-column: 1 / -1;">
                        <label class="form-label">Description</label>
                        <textarea id="editMasterDescription" class="form-control" rows="3">${escapeHtml(master.description || '')}</textarea>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Phase</label>
                        <select id="editMasterPhase" class="form-control">
                            <option value="phase1" ${master.phase === 'phase1' ? 'selected' : ''}>Phase 1</option>
                            <option value="phase2" ${master.phase === 'phase2' ? 'selected' : ''}>Phase 2</option>
                            <option value="phase3" ${master.phase === 'phase3' ? 'selected' : ''}>Phase 3</option>
                            <option value="completed" ${master.phase === 'completed' ? 'selected' : ''}>Completed</option>
                            <option value="upcoming" ${master.phase === 'upcoming' ? 'selected' : ''}>Upcoming</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Status</label>
                        <select id="editMasterStatus" class="form-control">
                            <option value="active" ${master.status === 'active' ? 'selected' : ''}>Active</option>
                            <option value="inactive" ${master.status === 'inactive' ? 'selected' : ''}>Inactive</option>
                            <option value="completed" ${master.status === 'completed' ? 'selected' : ''}>Completed</option>
                            <option value="planned" ${master.status === 'planned' ? 'selected' : ''}>Planned</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="this.closest('.modal').remove()">Cancel</button>
                <button class="btn btn-primary" onclick="saveMasterProjectEdit('${master.id}')">Save Changes</button>
            </div>
        </div>
    `;
    
    modal.innerHTML = html;
    document.body.appendChild(modal);
}

function saveMasterProjectEdit(masterId) {
    const master = db.masterProjects.find(m => m.id === masterId);
    if (!master) return;
    
    try {
        // Get form values
        const newName = document.getElementById('editMasterName').value;
        const oldName = master.name;
        
        // Check for duplicate name (excluding current master)
        if (newName !== oldName) {
            const duplicate = db.masterProjects.find(m => 
                m.name.toLowerCase() === newName.toLowerCase() && 
                m.id !== masterId
            );
            
            if (duplicate) {
                throw new Error(`Master project "${newName}" already exists`);
            }
        }
        
        // Update master project
        master.name = newName;
        master.code = document.getElementById('editMasterCode').value || '';
        master.location = document.getElementById('editMasterLocation').value;
        master.type = document.getElementById('editMasterType').value;
        master.totalArea = parseFloat(document.getElementById('editMasterTotalArea').value) || 0;
        master.plannedUnits = parseInt(document.getElementById('editMasterPlannedUnits').value) || 0;
        master.baseRate = parseFloat(document.getElementById('editMasterBaseRate').value) || 0;
        master.description = document.getElementById('editMasterDescription').value || '';
        master.phase = document.getElementById('editMasterPhase').value;
        master.status = document.getElementById('editMasterStatus').value;
        master.updatedAt = new Date().toISOString();
        
        // If name changed, update linked projects and inventory units
        if (newName !== oldName) {
            // Update projects with old name
            db.projects.forEach(project => {
                if (project.name === oldName) {
                    project.name = newName;
                    project.updatedAt = new Date().toISOString();
                }
            });
            
            // Update inventory units
            const inventoryUnits = db.inventoryUnits.filter(u => u.masterProjectId === masterId);
            // No need to update inventory units as they're linked by ID, not name
        }
        
        saveToStorage();
        
        // Close modal
        document.querySelector('.modal.show').remove();
        
        // Refresh all tables
        renderInventoryTables();
        renderProjectsTable();
        
        showNotification('success', 'Master Project Updated', 
            `${master.name} has been updated.`);
        
    } catch (error) {
        showNotification('error', 'Error', error.message);
    }
}





// Show reconciliation details
function showReconciliationDetails() {
  document.getElementById('reconciliationPanel').style.display = 'block';
  showReconciliationTab('unlinked');
}

function hideReconciliationDetails() {
  document.getElementById('reconciliationPanel').style.display = 'none';
}

function showReconciliationTab(tabName) {
  // Hide all tabs
  document.querySelectorAll('.reconciliation-tab').forEach(tab => {
    tab.style.display = 'none';
  });
  
  // Remove active class from all tab buttons
  document.querySelectorAll('.tab').forEach(tab => {
    tab.classList.remove('active');
  });
  
  // Show selected tab
  document.getElementById(tabName + 'Tab').style.display = 'block';
  
  // Add active class to clicked tab
  document.querySelectorAll('.tab').forEach(tab => {
    if (tab.textContent.toLowerCase().includes(tabName.toLowerCase())) {
      tab.classList.add('active');
    }
  });
  
  // Load tab content
  loadReconciliationTabContent(tabName);
}

function loadReconciliationTabContent(tabName) {
  const analysis = analyzeReconciliation();
  const container = document.getElementById(tabName + 'Tab');
  
  switch(tabName) {
    case 'unlinked':
      container.innerHTML = renderUnlinkedProjects(analysis.unlinkedProjects);
      break;
    case 'mismatched':
      container.innerHTML = renderMismatchedData(analysis.mismatchedData);
      break;
    case 'duplicate':
      container.innerHTML = renderDuplicateUnits(analysis.duplicateUnits);
      break;
    case 'suggestions':
      container.innerHTML = renderSuggestions(analysis.suggestions);
      break;
  }
}

function renderUnlinkedProjects(projects) {
  if (projects.length === 0) {
    return '<div style="text-align: center; padding: 40px; color: var(--gray-400);">All projects are properly linked to inventory ‚úÖ</div>';
  }
  
  return projects.map(item => {
    const customer = db.customers.find(c => c.id === item.customerId);
    const project = db.projects.find(p => p.id === item.projectId);
    
    return `
      <div class="reconciliation-item">
        <div class="reconciliation-header">
          <div class="reconciliation-title">
            ${item.projectName} - Unit ${item.unitNumber}
          </div>
          <span class="reconciliation-badge ${item.severity === 'high' ? 'danger' : 'warning'}">
            ${item.issue === 'no_master_project' ? 'Missing Master Project' : 'Missing Unit'}
          </span>
        </div>
        <div class="reconciliation-details">
          <div>
            <strong>Customer:</strong> ${customer ? escapeHtml(customer.name) : 'Unknown'}
          </div>
          <div>
            <strong>Sale Value:</strong> ${formatCurrency(item.saleValue)}
          </div>
          <div>
            <strong>Issue:</strong> ${item.issue === 'no_master_project' ? 
              'No master project exists' : 
              'No inventory unit exists'}
          </div>
          ${item.masterProjectName ? `
            <div>
              <strong>Should Link To:</strong> ${escapeHtml(item.masterProjectName)}
            </div>
          ` : ''}
        </div>
        <div class="reconciliation-actions">
          ${item.issue === 'no_master_project' ? `
            <button class="btn btn-sm btn-primary" 
                    onclick="createMasterProjectFromProject('${item.projectName}')">
              üè¢ Create Master Project
            </button>
          ` : ''}
          ${item.issue === 'no_inventory_unit' ? `
            <button class="btn btn-sm btn-success" 
                    onclick="createInventoryUnitFromProject('${item.projectId}')">
              üèó Create Inventory Unit
            </button>
          ` : ''}
          <button class="btn btn-sm btn-secondary" 
                  onclick="openProjectInNewTab('${item.projectId}')">
            üìã View Project
          </button>
        </div>
      </div>
    `;
  }).join('');
}

function renderMismatchedData(mismatches) {
  if (mismatches.length === 0) {
    return '<div style="text-align: center; padding: 40px; color: var(--gray-400);">No data mismatches found ‚úÖ</div>';
  }
  
  return mismatches.map(item => {
    const project = db.projects.find(p => p.id === item.projectId);
    const inventoryUnit = db.inventoryUnits.find(u => u.id === item.inventoryUnitId);
    const customer = project ? db.customers.find(c => c.id === project.customerId) : null;
    
    return `
      <div class="reconciliation-item">
        <div class="reconciliation-header">
          <div class="reconciliation-title">
            ${item.projectName} - Unit ${item.unitNumber}
          </div>
          <span class="reconciliation-badge warning">
            ${item.mismatches.length} Mismatch${item.mismatches.length > 1 ? 'es' : ''}
          </span>
        </div>
        <div class="reconciliation-details">
          <div>
            <strong>Customer:</strong> ${customer ? escapeHtml(customer.name) : 'Unknown'}
          </div>
          <div>
            <strong>Project Status:</strong> ${project?.status || 'N/A'}
          </div>
          <div>
            <strong>Inventory Status:</strong> ${inventoryUnit?.status || 'N/A'}
          </div>
        </div>
        <div style="margin-top: 12px;">
          <strong>Data Mismatches:</strong>
          <ul style="margin-top: 8px; padding-left: 20px;">
            ${item.mismatches.map(mismatch => `
              <li style="margin-bottom: 4px;">
                <strong>${mismatch.field.replace('_', ' ')}:</strong>
                Project: ${mismatch.projectValue}
                vs Inventory: ${mismatch.inventoryValue}
                ${mismatch.difference ? `(Difference: ${mismatch.difference})` : ''}
                ${mismatch.percent ? `(${mismatch.percent}%)` : ''}
              </li>
            `).join('')}
          </ul>
        </div>
        <div class="reconciliation-actions">
          <button class="btn btn-sm btn-primary" 
                  onclick="syncProjectToInventory('${item.projectId}', '${item.inventoryUnitId}')">
            üîÑ Sync to Inventory
          </button>
          <button class="btn btn-sm btn-secondary" 
                  onclick="syncInventoryToProject('${item.projectId}', '${item.inventoryUnitId}')">
            üîÑ Sync to Project
          </button>
          <button class="btn btn-sm btn-warning" 
                  onclick="ignoreMismatch('${item.projectId}', '${item.inventoryUnitId}')">
            Ignore
          </button>
        </div>
      </div>
    `;
  }).join('');
}

function renderDuplicateUnits(duplicates) {
  if (duplicates.length === 0) {
    return '<div style="text-align: center; padding: 40px; color: var(--gray-400);">No duplicate units found ‚úÖ</div>';
  }
  
  return duplicates.map(item => {
    return `
      <div class="reconciliation-item">
        <div class="reconciliation-header">
          <div class="reconciliation-title">
            ${item.masterProjectName} - Unit ${item.unitNumber}
          </div>
          <span class="reconciliation-badge danger">
            ${item.count} Duplicates
          </span>
        </div>
        <div style="margin-top: 12px;">
          <strong>Duplicate Units Found:</strong>
          <ul style="margin-top: 8px; padding-left: 20px;">
            ${item.units.map(unit => `
              <li style="margin-bottom: 4px;">
                ID: ${unit.id.substring(0, 8)} 
                | Status: ${unit.status}
                | Value: ${formatCurrency(unit.totalValue)}
                ${unit.customerId ? '| Has Customer' : ''}
                ${unit.saleDate ? `| Sold: ${formatDate(unit.saleDate)}` : ''}
              </li>
            `).join('')}
          </ul>
        </div>
        <div class="reconciliation-actions">
          <button class="btn btn-sm btn-primary" 
                  onclick="mergeDuplicateUnits('${item.masterProjectName}', '${item.unitNumber}')">
            üßπ Merge Duplicates
          </button>
          <button class="btn btn-sm btn-danger" 
                  onclick="deleteDuplicateUnits('${item.masterProjectName}', '${item.unitNumber}')">
            üóëÔ∏è Delete Extras
          </button>
          <button class="btn btn-sm btn-secondary" 
                  onclick="reviewDuplicates('${item.masterProjectName}', '${item.unitNumber}')">
            üëÅÔ∏è Review
          </button>
        </div>
      </div>
    `;
  }).join('');
}

function renderSuggestions(suggestions) {
  if (suggestions.length === 0) {
    return '<div style="text-align: center; padding: 40px; color: var(--gray-400);">No suggestions available ‚úÖ</div>';
  }
  
  // Group suggestions by type
  const grouped = suggestions.reduce((acc, suggestion) => {
    if (!acc[suggestion.type]) {
      acc[suggestion.type] = [];
    }
    acc[suggestion.type].push(suggestion);
    return acc;
  }, {});
  
  let html = '';
  
  // Create master project suggestions
  if (grouped.create_master_project) {
    html += `
      <div style="margin-bottom: 24px;">
        <h4 style="margin-bottom: 12px;">üè¢ Create Master Projects</h4>
        ${grouped.create_master_project.map(suggestion => `
          <div class="reconciliation-item" style="margin-bottom: 12px;">
            <div style="display: flex; justify-content: space-between; align-items: center;">
              <div>
                <strong>${suggestion.projectName}</strong>
                <div style="font-size: 0.875rem; color: var(--gray-600); margin-top: 4px;">
                  ${suggestion.unitCount} units | ${formatCurrency(suggestion.totalSaleValue)} total
                </div>
              </div>
              <button class="btn btn-sm btn-primary" 
                      onclick="createMasterProjectFromSuggestion('${suggestion.projectName}')">
                Create Master Project
              </button>
            </div>
          </div>
        `).join('')}
      </div>
    `;
  }
  
  // Create inventory unit suggestions
  if (grouped.create_inventory_unit) {
    html += `
      <div>
        <h4 style="margin-bottom: 12px;">üèó Create Inventory Units</h4>
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 12px;">
          ${grouped.create_inventory_unit.map(suggestion => `
            <div class="reconciliation-item">
              <div>
                <strong>${suggestion.masterProjectName} - Unit ${suggestion.unitNumber}</strong>
                <div style="font-size: 0.875rem; color: var(--gray-600); margin-top: 4px;">
                  Size: ${suggestion.size} Marla | Rate: ${formatCurrency(suggestion.rate)}
                  <br>Value: ${formatCurrency(suggestion.saleValue)}
                </div>
              </div>
              <button class="btn btn-sm btn-success w-100 mt-2" 
                      onclick="createInventoryUnitFromSuggestion('${suggestion.masterProjectId}', '${suggestion.unitNumber}')">
                Create Unit
              </button>
            </div>
          `).join('')}
        </div>
      </div>
    `;
  }
  
  return html;
}

// Action Functions
function createMasterProjectFromProject(projectName) {
  // Find all projects with this name to gather data
  const projectsWithSameName = db.projects.filter(p => p.name === projectName);
  
  if (projectsWithSameName.length === 0) return;
  
  // Calculate averages and totals
  const totalUnits = projectsWithSameName.length;
  const totalSaleValue = projectsWithSameName.reduce((sum, p) => sum + (p.sale || 0), 0);
  const avgMarlas = projectsWithSameName.reduce((sum, p) => sum + (p.marlas || 0), 0) / totalUnits;
  const avgRate = projectsWithSameName.reduce((sum, p) => sum + (p.rate || 0), 0) / totalUnits;
  
  // Create master project
  const masterProject = {
    id: generateId('master'),
    name: projectName,
    code: projectName.substring(0, 3).toUpperCase(),
    location: 'Auto-detected from projects',
    type: 'commercial', // Default, can be changed
    totalArea: avgMarlas * totalUnits,
    plannedUnits: totalUnits,
    baseRate: avgRate,
    description: `Auto-created from ${totalUnits} existing projects`,
    phase: 'completed',
    status: 'active',
    createdAt: new Date().toISOString(),
    updatedAt: new Date().toISOString()
  };
  
  db.masterProjects.push(masterProject);
  
  // Create inventory units for each project
  projectsWithSameName.forEach(project => {
    const inventoryUnit = {
      id: generateId('unit'),
      masterProjectId: masterProject.id,
      unitNumber: project.unit,
      unitType: 'plot',
      size: project.marlas,
      rate: project.rate,
      totalValue: project.sale,
      status: 'sold',
      customerId: project.customerId,
      brokerId: project.brokerId || null,
      saleDate: project.createdAt,
      remarks: 'Auto-created during reconciliation',
      createdAt: new Date().toISOString(),
      updatedAt: new Date().toISOString()
    };
    
    db.inventoryUnits.push(inventoryUnit);
  });
  
  saveToStorage();
  renderInventoryTables();
  updateReconciliationStats();
  
  showNotification('success', 'Master Project Created', 
    `Created "${projectName}" with ${totalUnits} units.`);
}

function createInventoryUnitFromProject(projectId) {
  const project = db.projects.find(p => p.id === projectId);
  if (!project) return;
  
  const masterProject = db.masterProjects.find(m => 
    m.name.toLowerCase() === project.name.toLowerCase()
  );
  
  if (!masterProject) {
    showNotification('error', 'Error', 'Master project not found. Create it first.');
    return;
  }
  
  // Check if unit already exists
  const existingUnit = db.inventoryUnits.find(u => 
    u.masterProjectId === masterProject.id && 
    u.unitNumber.toString() === project.unit.toString()
  );
  
  if (existingUnit) {
    showNotification('warning', 'Unit Exists', 'Inventory unit already exists.');
    return;
  }
  
  const inventoryUnit = {
    id: generateId('unit'),
    masterProjectId: masterProject.id,
    unitNumber: project.unit,
    unitType: 'plot',
    size: project.marlas,
    rate: project.rate,
    totalValue: project.sale,
    status: 'sold',
    customerId: project.customerId,
    brokerId: project.brokerId || null,
    saleDate: project.createdAt,
    remarks: 'Auto-created during reconciliation',
    createdAt: new Date().toISOString(),
    updatedAt: new Date().toISOString()
  };
  
  db.inventoryUnits.push(inventoryUnit);
  saveToStorage();
  renderInventoryTables();
  updateReconciliationStats();
  
  showNotification('success', 'Unit Created', 
    `Created unit ${project.unit} for ${project.name}.`);
}


// Fix for createInventoryUnitFromSuggestion function
function createInventoryUnitFromSuggestion(masterProjectId, unitNumber) {
  // Find the suggestion data from analysis
  const analysis = analyzeReconciliation();
  const suggestion = analysis.suggestions.find(s => 
    s.type === 'create_inventory_unit' && 
    s.masterProjectId === masterProjectId && 
    s.unitNumber === unitNumber
  );
  
  if (!suggestion) {
    // Try to find project data directly
    const master = db.masterProjects.find(m => m.id === masterProjectId);
    if (!master) {
      showNotification('error', 'Error', 'Master project not found.');
      return;
    }
    
    const project = db.projects.find(p => 
      p.name === master.name && p.unit === unitNumber
    );
    
    if (!project) {
      showNotification('error', 'Error', 'Project not found.');
      return;
    }
    
    // Create inventory unit
    const inventoryUnit = {
      id: generateId('unit'),
      masterProjectId: masterProjectId,
      unitNumber: unitNumber,
      unitType: 'plot',
      size: project.marlas,
      rate: project.rate,
      totalValue: project.sale,
      status: 'sold',
      customerId: project.customerId,
      brokerId: project.brokerId || null,
      saleDate: project.createdAt,
      remarks: 'Created from reconciliation suggestion',
      createdAt: new Date().toISOString(),
      updatedAt: new Date().toISOString()
    };
    
    db.inventoryUnits.push(inventoryUnit);
    saveToStorage();
    renderInventoryTables();
    updateReconciliationStats();
    
    showNotification('success', 'Unit Created', 
      `Created inventory unit ${unitNumber} for ${master.name}.`);
    return;
  }
  
  // Use suggestion data
  const master = db.masterProjects.find(m => m.id === masterProjectId);
  if (!master) return;
  
  // Check if already exists
  const existingUnit = db.inventoryUnits.find(u => 
    u.masterProjectId === masterProjectId && 
    u.unitNumber.toString() === unitNumber.toString()
  );
  
  if (existingUnit) {
    showNotification('warning', 'Exists', 'Inventory unit already exists.');
    return;
  }
  
  const inventoryUnit = {
    id: generateId('unit'),
    masterProjectId: masterProjectId,
    unitNumber: unitNumber,
    unitType: 'plot',
    size: suggestion.size,
    rate: suggestion.rate,
    totalValue: suggestion.saleValue,
    status: 'sold',
    customerId: null, // Will be linked when we find the project
    brokerId: null,
    saleDate: new Date().toISOString(),
    remarks: 'Created from reconciliation suggestion',
    createdAt: new Date().toISOString(),
    updatedAt: new Date().toISOString()
  };
  
  // Try to find and link to project
  const project = db.projects.find(p => 
    p.name === master.name && p.unit === unitNumber
  );
  
  if (project) {
    inventoryUnit.customerId = project.customerId;
    inventoryUnit.brokerId = project.brokerId;
    inventoryUnit.saleDate = project.createdAt;
  }
  
  db.inventoryUnits.push(inventoryUnit);
  saveToStorage();
  renderInventoryTables();
  updateReconciliationStats();
  
  showNotification('success', 'Unit Created', 
    `Created inventory unit ${unitNumber} for ${master.name}.`);
}

function createMasterProjectFromSuggestion(projectName) {
  createMasterProjectFromProject(projectName);
}








function syncProjectToInventory(projectId, inventoryUnitId) {
  const project = db.projects.find(p => p.id === projectId);
  const inventoryUnit = db.inventoryUnits.find(u => u.id === inventoryUnitId);
  
  if (!project || !inventoryUnit) return;
  
  // Update inventory unit with project data
  inventoryUnit.size = project.marlas;
  inventoryUnit.rate = project.rate;
  inventoryUnit.totalValue = project.sale;
  inventoryUnit.status = 'sold';
  inventoryUnit.customerId = project.customerId;
  inventoryUnit.brokerId = project.brokerId;
  inventoryUnit.saleDate = project.createdAt;
  inventoryUnit.updatedAt = new Date().toISOString();
  
  saveToStorage();
  renderInventoryTables();
  updateReconciliationStats();
  
  showNotification('success', 'Synced', 'Project data synced to inventory.');
}

function syncInventoryToProject(projectId, inventoryUnitId) {
  const project = db.projects.find(p => p.id === projectId);
  const inventoryUnit = db.inventoryUnits.find(u => u.id === inventoryUnitId);
  
  if (!project || !inventoryUnit) return;
  
  // Update project with inventory data
  project.marlas = inventoryUnit.size;
  project.rate = inventoryUnit.rate;
  project.sale = inventoryUnit.totalValue;
  project.updatedAt = new Date().toISOString();
  
  saveToStorage();
  renderProjectsTable();
  updateReconciliationStats();
  
  showNotification('success', 'Synced', 'Inventory data synced to project.');
}

// Bulk reconciliation
function reconcileInventory() {
  openReconciliationModal();
}

function openReconciliationModal() {
  const analysis = analyzeReconciliation();
  
  let html = `
    <div>
      <h4 style="margin-bottom: 16px;">Bulk Reconciliation Options</h4>
      <div style="background: var(--gray-50); padding: 16px; border-radius: var(--radius); margin-bottom: 16px;">
        <strong>Current Status:</strong>
        <ul style="margin-top: 8px; padding-left: 20px;">
          <li>${analysis.summary.soldProjects} sold projects</li>
          <li>${analysis.summary.linkedProjects} linked to inventory</li>
          <li>${analysis.summary.missingInventory} missing inventory entries</li>
          <li>${analysis.mismatchedData.length} data mismatches</li>
          <li>${analysis.duplicateUnits.length} duplicate units</li>
        </ul>
      </div>
      
      <div style="margin-bottom: 16px;">
        <label style="display: block; margin-bottom: 8px; font-weight: 600;">
          <input type="checkbox" id="autoCreateMasterProjects" checked>
          Create missing master projects
        </label>
        <div style="font-size: 0.875rem; color: var(--gray-600); margin-left: 24px;">
          Will create ${analysis.unlinkedProjects.filter(p => p.issue === 'no_master_project').length} master projects
        </div>
      </div>
      
      <div style="margin-bottom: 16px;">
        <label style="display: block; margin-bottom: 8px; font-weight: 600;">
          <input type="checkbox" id="autoCreateInventoryUnits" checked>
          Create missing inventory units
        </label>
        <div style="font-size: 0.875rem; color: var(--gray-600); margin-left: 24px;">
          Will create ${analysis.unlinkedProjects.filter(p => p.issue === 'no_inventory_unit').length} inventory units
        </div>
      </div>
      
      <div style="margin-bottom: 16px;">
        <label style="display: block; margin-bottom: 8px; font-weight: 600;">
          <input type="checkbox" id="autoFixDataMismatches">
          Fix data mismatches
        </label>
        <div style="font-size: 0.875rem; color: var(--gray-600); margin-left: 24px;">
          Will sync ${analysis.mismatchedData.length} mismatched records (Project ‚Üí Inventory)
        </div>
      </div>
      
      <div style="margin-bottom: 16px;">
        <label style="display: block; margin-bottom: 8px; font-weight: 600;">
          <input type="checkbox" id="autoMergeDuplicates">
          Merge duplicate units
        </label>
        <div style="font-size: 0.875rem; color: var(--gray-600); margin-left: 24px;">
          Will merge ${analysis.duplicateUnits.length} duplicate units
        </div>
      </div>
      
      <div class="alert alert-info">
        <strong>Note:</strong> This action will create/update multiple records. 
        A backup will be automatically created before proceeding.
      </div>
    </div>
  `;
  
  document.getElementById('reconciliationContent').innerHTML = html;
  document.getElementById('reconciliationModal').classList.add('show');
}

function closeReconciliationModal() {
  document.getElementById('reconciliationModal').classList.remove('show');
}

function applyBulkReconciliation() {
  const analysis = analyzeReconciliation();
  
  // Create backup
  createBackup();
  
  let actionsTaken = 0;
  
  // Create missing master projects
  if (document.getElementById('autoCreateMasterProjects').checked) {
    const masterProjectsToCreate = analysis.unlinkedProjects.filter(p => p.issue === 'no_master_project');
    
    masterProjectsToCreate.forEach(item => {
      const projects = db.projects.filter(p => p.name === item.projectName);
      if (projects.length === 0) return;
      
      // Check if master project was already created in this batch
      const existingMaster = db.masterProjects.find(m => 
        m.name.toLowerCase() === item.projectName.toLowerCase()
      );
      
      if (!existingMaster) {
        createMasterProjectFromProject(item.projectName);
        actionsTaken++;
      }
    });
  }
  
  // Create missing inventory units
  if (document.getElementById('autoCreateInventoryUnits').checked) {
    const unitsToCreate = analysis.unlinkedProjects.filter(p => p.issue === 'no_inventory_unit');
    
    unitsToCreate.forEach(item => {
      createInventoryUnitFromProject(item.projectId);
      actionsTaken++;
    });
  }
  
  // Fix data mismatches
  if (document.getElementById('autoFixDataMismatches').checked) {
    analysis.mismatchedData.forEach(item => {
      syncProjectToInventory(item.projectId, item.inventoryUnitId);
      actionsTaken++;
    });
  }
  
  // Merge duplicates (simplified version)
  if (document.getElementById('autoMergeDuplicates').checked) {
    analysis.duplicateUnits.forEach(item => {
      // Keep the first unit with customer data, delete others
      const units = item.units;
      const unitsWithCustomers = units.filter(u => u.customerId);
      
      let unitToKeep = unitsWithCustomers.length > 0 ? unitsWithCustomers[0] : units[0];
      
      // Delete other units
      units.forEach((unit, index) => {
        if (unit.id !== unitToKeep.id) {
          db.inventoryUnits = db.inventoryUnits.filter(u => u.id !== unit.id);
          actionsTaken++;
        }
      });
    });
  }
  
  closeReconciliationModal();
  saveToStorage();
  renderInventoryTables();
  updateReconciliationStats();
  
  showNotification('success', 'Reconciliation Complete', 
    `Applied ${actionsTaken} reconciliation actions.`);
}















function openCustomer(customerId) {
  console.log('Opening customer from lead card:', customerId);
  
  try {
    // Simply call the existing working function
    openCustomerModal(customerId);
  } catch (error) {
    console.error('Error in openCustomer:', error);
    showNotification('error', 'Error', 'Could not open customer details.');
  }
}




function getDateString(date = new Date()) {
  try {
    // Handle various date inputs
    let d;
    if (date instanceof Date) {
      d = date;
    } else if (typeof date === 'string' || typeof date === 'number') {
      d = new Date(date);
    } else {
      d = new Date();
    }
    
    // Ensure it's a valid date
    if (isNaN(d.getTime())) {
      d = new Date();
    }
    
    const year = d.getFullYear();
    const month = String(d.getMonth() + 1).padStart(2, '0');
    const day = String(d.getDate()).padStart(2, '0');
    return `${year}-${month}-${day}`;
  } catch (error) {
    console.error('Error in getDateString:', error);
    // Return today's date as fallback
    const d = new Date();
    const year = d.getFullYear();
    const month = String(d.getMonth() + 1).padStart(2, '0');
    const day = String(d.getDate()).padStart(2, '0');
    return `${year}-${month}-${day}`;
  }
}

function getDateTimeString(date = new Date()) {
  const d = date instanceof Date ? date : new Date(date);
  // Ensure we return a string in YYYY-MM-DDTHH:MM format
  const year = d.getFullYear();
  const month = String(d.getMonth() + 1).padStart(2, '0');
  const day = String(d.getDate()).padStart(2, '0');
  const hours = String(d.getHours()).padStart(2, '0');
  const minutes = String(d.getMinutes()).padStart(2, '0');
  return `${year}-${month}-${day}T${hours}:${minutes}`;
}

function formatDate(dateStr) {
  try {
    if (!dateStr) return 'N/A';
    const date = new Date(dateStr);
    if (isNaN(date.getTime())) return 'Invalid Date';
    return date.toLocaleDateString('en-PK', {
      year: 'numeric',
      month: 'short',
      day: 'numeric'
    });
  } catch (error) {
    console.error('Error formatting date:', error);
    return 'Error';
  }
}

function formatDateTime(dateStr) {
  const date = new Date(dateStr);
  return date.toLocaleString('en-PK', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
}

function showNotification(type, title, message, duration = 3000) {
  const container = document.getElementById('notificationContainer');
  const notification = document.createElement('div');
  notification.className = `notification ${type}`;
  
  const icons = {
    success: '‚úÖ',
    error: '‚ùå',
    warning: '‚ö†Ô∏è',
    info: '‚ÑπÔ∏è'
  };
  
  notification.innerHTML = `
    <div class="notification-icon">${icons[type] || '‚ÑπÔ∏è'}</div>
    <div class="notification-content">
      <div class="notification-title">${title}</div>
      <div class="notification-message">${message}</div>
    </div>
    <button class="notification-close" onclick="this.parentElement.remove()">√ó</button>
  `;
  
  container.appendChild(notification);
  
  // Trigger animation
  setTimeout(() => notification.classList.add('show'), 10);
  
  // Auto remove
  setTimeout(() => {
    notification.classList.remove('show');
    setTimeout(() => {
      if (notification.parentNode) {
        notification.parentNode.removeChild(notification);
      }
    }, 300);
  }, duration);
}







// Helper function to open project in new view
function openProjectInNewTab(projectId) {
  const project = db.projects.find(p => p.id === projectId);
  if (!project) return;
  
  // Create a simple view modal
  const modal = document.createElement('div');
  modal.className = 'modal show';
  modal.innerHTML = `
    <div class="modal-content" style="max-width: 600px;">
      <div class="modal-header">
        <h3 class="modal-title">Project Details</h3>
        <button class="btn btn-sm btn-secondary" onclick="this.closest('.modal').remove()">‚úï</button>
      </div>
      <div class="modal-body">
        <div style="display: grid; gap: 12px;">
          <div><strong>Project:</strong> ${escapeHtml(project.name)}</div>
          <div><strong>Unit:</strong> ${escapeHtml(project.unit)}</div>
          <div><strong>Sale Value:</strong> ${formatCurrency(project.sale)}</div>
          <div><strong>Marlas:</strong> ${project.marlas}</div>
          <div><strong>Rate:</strong> ${formatCurrency(project.rate)}/Marla</div>
          <div><strong>Status:</strong> ${project.status}</div>
        </div>
      </div>
    </div>
  `;
  
  document.body.appendChild(modal);
}

// Reconcile specific master project
function reconcileMasterProject(masterId) {
  const master = db.masterProjects.find(m => m.id === masterId);
  if (!master) return;
  
  const analysis = analyzeReconciliation();
  const unlinkedForMaster = analysis.unlinkedProjects.filter(p => 
    p.masterProjectId === masterId || 
    (p.projectName === master.name && !p.masterProjectId)
  );
  
  if (unlinkedForMaster.length === 0) {
    showNotification('info', 'No Issues', 'No reconciliation issues found for this project.');
    return;
  }
  
  // Create missing units
  unlinkedForMaster.forEach(item => {
    if (item.issue === 'no_inventory_unit') {
      createInventoryUnitFromProject(item.projectId);
    }
  });
  
  showNotification('success', 'Reconciled', 
    `Created ${unlinkedForMaster.length} inventory units for ${master.name}.`);
}

// Reconcile specific unit
function reconcileUnit(unitId, projectId) {
  syncProjectToInventory(projectId, unitId);
}













function editBroker(customerId) {
  const broker = db.customers.find(c => c.id === customerId);
  if (!broker) return;
  
  // Populate edit form
  document.getElementById('editCustomerId').value = broker.id;
  document.getElementById('editCustomerName').value = broker.name;
  document.getElementById('editCustomerCnic').value = broker.cnic;
  document.getElementById('editCustomerPhone').value = broker.phone;
  document.getElementById('editCustomerEmail').value = broker.email || '';
  document.getElementById('editCustomerCompany').value = broker.company || '';
  document.getElementById('editCustomerAddress').value = broker.address || '';
  document.getElementById('editCustomerType').value = broker.type;
  document.getElementById('editCustomerStatus').value = broker.status;
  
  document.getElementById('editCustomerModal').classList.add('show');
}







function validateEmail(email) {
  if (!email) return true; // Email is optional
  const regex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  return regex.test(email);
}

function calculateDaysBetween(date1, date2) {
  const d1 = new Date(date1);
  const d2 = new Date(date2);
  const diffTime = Math.abs(d2 - d1);
  return Math.ceil(diffTime / (1000 * 60 * 60 * 24));
}


// Data Persistence
async function saveToStorage(silent = true) {
  try {
    db.lastUpdated = new Date().toISOString();
    
    // Save to localStorage (quick access)
    try {
      const storageData = createCompactStorageData();
      localStorage.setItem(STORAGE_KEY, JSON.stringify(storageData));
    } catch (localStorageError) {
      if (localStorageError.name === 'QuotaExceededError') {
        console.warn('localStorage full, will rely on file backups');
        // Silently continue with file backup
      } else {
        console.error('localStorage error:', localStorageError);
      }
    }
    
    // Only auto-save to file every 5 minutes to avoid too many files
    const lastAutoSave = localStorage.getItem('sitara_last_auto_save');
    const now = new Date();
    
    if (!lastAutoSave || (now - new Date(lastAutoSave)) > autoSaveInterval) {
      if (silent) {
        // Silent auto-save (no prompts)
        await autoSaveToFile();
      } else {
        // Manual save (might show prompt)
        await manualSaveToFile(false);
      }
    }
    
    return true;
    
  } catch (error) {
    console.error('Save failed:', error);
    // Don't show error notification for silent saves
    if (!silent) {
      showNotification('error', 'Save Failed', 'Could not save data.');
    }
    return false;
  }
}




// Create compact storage data
function createCompactStorageData() {
  return {
    version: db.version,
    lastUpdated: db.lastUpdated,
    settings: db.settings,
    // Store only essential data
    customers: db.customers.map(c => ({
      id: c.id,
      name: c.name,
      phone: c.phone,
      cnic: c.cnic,
      type: c.type,
      status: c.status
    })),
    projects: db.projects.map(p => ({
      id: p.id,
      customerId: p.customerId,
      name: p.name,
      unit: p.unit,
      sale: p.sale,
      received: p.received,
      status: p.status
    })),
    // Keep summaries for quick access
    summary: {
      customers: db.customers.length,
      projects: db.projects.length,
      interactions: db.interactions.length,
      receipts: db.receipts.length,
      masterProjects: db.masterProjects?.length || 0,
      inventoryUnits: db.inventoryUnits?.length || 0,
      totalSaleValue: calculateOverallFinancials().totalSale,
      totalReceived: calculateOverallFinancials().totalReceived
    }
  };
}

function emergencyStorageCleanup() {
  try {
    // Clear old backups
    localStorage.removeItem(BACKUP_KEY);
    
    // Clear any non-essential data
    const essentialKeys = [STORAGE_KEY];
    for (let i = 0; i < localStorage.length; i++) {
      const key = localStorage.key(i);
      if (!essentialKeys.includes(key)) {
        localStorage.removeItem(key);
      }
    }
    
    // Compress existing data
    const existing = localStorage.getItem(STORAGE_KEY);
    if (existing) {
      const data = JSON.parse(existing);
      
      // Remove old interactions
      if (data.interactions && data.interactions.length > 1000) {
        data.interactions = data.interactions.slice(-1000);
      }
      
      // Truncate long notes
      if (data.interactions) {
        data.interactions.forEach(i => {
          if (i.notes && i.notes.length > 200) {
            i.notes = i.notes.substring(0, 200) + '...';
          }
        });
      }
      
      localStorage.setItem(STORAGE_KEY, JSON.stringify(data));
    }
  } catch (e) {
    console.error('Emergency cleanup failed:', e);
  }
}






function checkStorageHealth() {
  try {
    // Test if we can write to localStorage
    const testKey = 'storage_health_test';
    const testData = 'test';
    
    try {
      localStorage.setItem(testKey, testData);
      localStorage.removeItem(testKey);
    } catch (e) {
      if (e.name === 'QuotaExceededError') {
        showNotification('error', 'Storage Full!', 
          'Your browser storage is full. Please export your data immediately to prevent data loss.');
        return false;
      }
    }
    
    // Check current storage usage
    let totalBytes = 0;
    for (let i = 0; i < localStorage.length; i++) {
      const key = localStorage.key(i);
      const value = localStorage.getItem(key);
      totalBytes += key.length + value.length;
    }
    
    const maxBytes = 5 * 1024 * 1024; // 5MB typical limit
    const usagePercent = (totalBytes / maxBytes) * 100;
    
    if (usagePercent > 80) {
      showNotification('warning', 'Storage Almost Full', 
        `Browser storage is ${Math.round(usagePercent)}% full. Consider exporting old data.`);
    }
    
    return true;
  } catch (e) {
    console.warn('Storage health check failed:', e);
    return false;
  }
}








async function loadFromStorage() {
  try {
    // Try localStorage first
    const stored = localStorage.getItem(STORAGE_KEY);
    if (stored) {
      const data = JSON.parse(stored);
      
      // Merge with current structure
      if (data.db) {
        Object.assign(db, data.db);
      } else {
        // Handle compact format
        if (data.customers) db.customers = data.customers;
        if (data.projects) db.projects = data.projects;
        if (data.settings) db.settings = data.settings;
        if (data.lastUpdated) db.lastUpdated = data.lastUpdated;
      }
      
      // Ensure arrays exist
      db.customers = db.customers || [];
      db.projects = db.projects || [];
      db.interactions = db.interactions || [];
      db.receipts = db.receipts || [];
      db.masterProjects = db.masterProjects || [];
      db.inventoryUnits = db.inventoryUnits || [];
      
      showNotification('success', 'Data Loaded', 'CRM data loaded from browser storage');
      return true;
    }
    
    // If no localStorage data, check for recent file
    const lastFileSave = localStorage.getItem('sitara_last_backup');
    if (lastFileSave) {
      if (confirm('No local data found, but a recent file backup exists. Would you like to load from file?')) {
        return await loadFromFile();
      }
    }
    
    // Initialize with empty arrays
    initializeEmptyDatabase();
    return true;
    
  } catch (e) {
    console.error('Load failed:', e);
    showNotification('error', 'Load Failed', 'Could not load data from storage.');
    
    // Try to load from file as last resort
    if (confirm('Could not load saved data. Would you like to try loading from a backup file?')) {
      return await loadFromFile();
    }
    
    // Initialize fresh
    initializeEmptyDatabase();
    return false;
  }
}










function initializeEmptyDatabase() {
  db = {
    version: '3',
    customers: [],
    projects: [],
    interactions: [],
    receipts: [],
    masterProjects: [],
    inventoryUnits: [],
    settings: {
      currency: 'PKR',
      defaultCycle: 'bi_annual',
      followUpDays: [1, 3, 7, 14, 30],
      commissionRate: 1,
      storageMode: 'hybrid' // 'localStorage', 'file', or 'hybrid'
    },
    lastUpdated: new Date().toISOString()
  };
}





function createBackup() {
  // This is now handled by autoSaveToFile and manualSaveToFile
  // Keeping this function for compatibility but making it do nothing
  return true;
}

function updateInventoryStats() {
  try {
    const totalMasterProjects = db.masterProjects?.length || 0;
    const totalInventoryUnits = db.inventoryUnits?.length || 0;
    const availableUnits = db.inventoryUnits?.filter(u => u.status === 'available').length || 0;
    const soldUnits = db.inventoryUnits?.filter(u => u.status === 'sold').length || 0;
    const reservedUnits = db.inventoryUnits?.filter(u => u.status === 'reserved').length || 0;
    
    const totalInventoryValue = db.inventoryUnits?.reduce((sum, unit) => {
      return sum + (Number(unit.totalValue) || 0);
    }, 0) || 0;
    
    // Safely update elements
    const elements = {
      'totalMasterProjects': totalMasterProjects,
      'totalInventoryUnits': totalInventoryUnits,
      'availableInventoryUnits': availableUnits,
      'soldInventoryUnits': soldUnits,
      'reservedInventoryUnits': reservedUnits,
      'totalInventoryValue': formatCurrency(totalInventoryValue)
    };
    
    Object.keys(elements).forEach(id => {
      const element = document.getElementById(id);
      if (element) {
        element.textContent = elements[id];
      }
    });
    
    // Update reconciliation stats
    updateReconciliationStats();
    
  } catch (error) {
    console.error('Error updating inventory stats:', error);
  }
}



// Render Inventory Tables
function renderInventoryTables() {
  renderMasterProjectsTable();
  renderInventoryUnitsTable();
  updateInventoryStats();
}

function renderMasterProjectsTable() {
  const tbody = document.querySelector('#masterProjectsTable tbody');
  if (!tbody) return;
  
  const analysis = analyzeReconciliation();
  
  const html = db.masterProjects.map(master => {
    const projectUnits = db.inventoryUnits.filter(u => u.masterProjectId === master.id);
    const soldUnits = projectUnits.filter(u => u.status === 'sold').length;
    const availableUnits = projectUnits.filter(u => u.status === 'available').length;
    
    // Count linked projects
    const linkedProjects = db.projects.filter(p => 
      p.name.toLowerCase() === master.name.toLowerCase()
    ).length;
    
    // Check reconciliation status
    const projectsForMaster = db.projects.filter(p => 
      p.name.toLowerCase() === master.name.toLowerCase()
    );
    
    let reconStatus = 'perfect';
    let reconMessage = 'All projects linked';
    
    if (projectsForMaster.length === 0) {
      reconStatus = 'warning';
      reconMessage = 'No projects linked';
    } else if (linkedProjects < projectsForMaster.length) {
      reconStatus = 'danger';
      reconMessage = `${projectsForMaster.length - linkedProjects} projects unlinked`;
    } else if (soldUnits !== linkedProjects) {
      reconStatus = 'warning';
      reconMessage = 'Sold count mismatch';
    }
    
    return `
      <tr>
        <td>
          <span class="cursor-pointer text-primary font-semibold" 
                onclick="viewMasterProject('${master.id}')">
            ${escapeHtml(master.name)}
          </span>
          ${master.code ? `<div class="text-xs text-muted">${escapeHtml(master.code)}</div>` : ''}
        </td>
        <td>${escapeHtml(master.location)}</td>
        <td>
          <span class="badge ${master.type === 'commercial' ? 'badge-primary' : 
                              master.type === 'residential' ? 'badge-success' : 
                              'badge-warning'}">
            ${escapeHtml(master.type.toUpperCase())}
          </span>
        </td>
        <td>${projectUnits.length}</td>
        <td><span class="text-primary font-semibold">${soldUnits}</span></td>
        <td>
          <span class="${linkedProjects === projectsForMaster.length ? 'text-success' : 'text-danger'}">
            ${linkedProjects}/${projectsForMaster.length}
          </span>
        </td>
        <td>
          <span class="recon-status ${reconStatus === 'perfect' ? 'synced' : 
                                     reconStatus === 'warning' ? 'mismatch' : 'missing'}">
            ${reconMessage}
          </span>
        </td>
        <td>
          <div class="btn-group">
            <button class="action-btn btn-view" onclick="viewMasterProject('${master.id}')">
              View
            </button>
            <button class="action-btn btn-edit" onclick="editMasterProject('${master.id}')">
              Edit
            </button>
            ${reconStatus !== 'perfect' ? `
              <button class="action-btn btn-warning" onclick="reconcileMasterProject('${master.id}')">
                üîÑ Fix
              </button>
            ` : ''}
          </div>
        </td>
      </tr>
    `;
  }).join('');
  
  tbody.innerHTML = html || `
    <tr>
      <td colspan="8" style="text-align: center; color: var(--gray-400); padding: 40px;">
        No master projects found. Add your first master project to start inventory tracking.
      </td>
    </tr>
  `;
}


function renderInventoryUnitsTable() {
  const tbody = document.querySelector('#inventoryUnitsTable tbody');
  if (!tbody) return;
  
  // Get filters
  const searchTerm = document.getElementById('inventorySearch')?.value.toLowerCase() || '';
  const statusFilter = document.getElementById('inventoryStatusFilter')?.value || 'all';
  const typeFilter = document.getElementById('inventoryTypeFilter')?.value || 'all';
  
  // Filter units
  let filtered = db.inventoryUnits.filter(unit => {
    // Search filter
    if (searchTerm) {
      const master = db.masterProjects.find(m => m.id === unit.masterProjectId);
      const searchFields = [
        unit.unitNumber,
        master?.name || '',
        master?.code || ''
      ].join(' ').toLowerCase();
      
      if (!searchFields.includes(searchTerm)) return false;
    }
    
    // Status filter
    if (statusFilter !== 'all' && unit.status !== statusFilter) return false;
    
    // Type filter
    if (typeFilter !== 'all' && unit.unitType !== typeFilter) return false;
    
    return true;
  });
  
  const html = filtered.map(unit => {
    const master = db.masterProjects.find(m => m.id === unit.masterProjectId);
    const project = db.projects.find(p => 
      p.name === master?.name && p.unit === unit.unitNumber
    );
    
    const customer = project ? db.customers.find(c => c.id === project.customerId) : null;
    const broker = project && project.brokerId ? 
      db.customers.find(c => c.id === project.brokerId) : null;
    
    
      
      let reconStatus = 'synced';
    let reconMessage = 'Linked';
    
    if (!project) {
      if (unit.status === 'sold') {
        reconStatus = 'missing';
        reconMessage = 'No project found';
      } else {
        reconStatus = 'synced';
        reconMessage = 'Available';
      }
    } else if (unit.status !== 'sold') {
      reconStatus = 'mismatch';
      reconMessage = 'Should be sold';
    } else {
      // Check for data mismatches
      const valueDiff = Math.abs((unit.totalValue || 0) - (project.sale || 0));
      if (valueDiff > 100) { // More than 100 difference
        reconStatus = 'mismatch';
        reconMessage = 'Value mismatch';
      }
    }
    
    const statusBadge = unit.status === 'available' ? 'badge-success' :
                       unit.status === 'sold' ? 'badge-primary' :
                       unit.status === 'reserved' ? 'badge-warning' :
                       'badge-danger';
    
    
    return `
      <tr>
        <td>
          <span class="cursor-pointer text-primary" 
                onclick="viewMasterProject('${unit.masterProjectId}')">
            ${escapeHtml(master?.name || 'Unknown')}
          </span>
        </td>
        <td class="font-semibold">${escapeHtml(unit.unitNumber)}</td>
        <td>
          <span class="badge badge-info">
            ${unit.unitType.toUpperCase()}
          </span>
        </td>
        <td>${unit.size} Marla</td>
        <td>${formatCurrency(unit.rate)}</td>
        <td class="font-semibold">${formatCurrency(unit.totalValue)}</td>
        <td>
          <span class="badge ${statusBadge}">
            ${unit.status.toUpperCase()}
          </span>
        </td>
        <td>
          ${customer ? `
            <span class="cursor-pointer text-primary" 
                  onclick="openCustomerModal('${customer.id}')">
              ${escapeHtml(customer.name)}
            </span>
          ` : '<span class="text-muted">-</span>'}
        </td>
        <td>
          ${broker ? `
            <span class="cursor-pointer text-success" 
                  onclick="openCustomerModal('${broker.id}')">
              ${escapeHtml(broker.name)}
            </span>
          ` : '<span class="text-muted">-</span>'}
        </td>
        <td>
          <span class="recon-status ${reconStatus}">
            ${reconMessage}
          </span>
        </td>
        <td>
          <div class="btn-group">
            ${!project && unit.status === 'available' ? `
              <button class="action-btn btn-success" 
                      onclick="sellInventoryUnit('${unit.id}')">
                Sell
              </button>
            ` : ''}
            ${project && reconStatus !== 'synced' ? `
              <button class="action-btn btn-warning" 
                      onclick="reconcileUnit('${unit.id}', '${project.id}')">
                üîÑ
              </button>
            ` : ''}
            <button class="action-btn btn-edit" onclick="editInventoryUnit('${unit.id}')">
              Edit
            </button>
          </div>
        </td>
      </tr>
    `;
  }).join('');
  
  tbody.innerHTML = html || `
    <tr>
      <td colspan="11" style="text-align: center; color: var(--gray-400); padding: 40px;">
        No inventory units found
      </td>
    </tr>
  `;
}


// Modal Functions
function openAddMasterProjectModal() {
  document.getElementById('addMasterProjectModal').classList.add('show');
}

function closeAddMasterProjectModal() {
  document.getElementById('addMasterProjectModal').classList.remove('show');
  document.getElementById('masterProjectForm').reset();
}

function openAddInventoryUnitModal() {
  populateMasterProjectSelect();
  document.getElementById('addInventoryUnitModal').classList.add('show');
}

function closeAddInventoryUnitModal() {
  document.getElementById('addInventoryUnitModal').classList.remove('show');
  document.getElementById('inventoryUnitForm').reset();
}

function populateMasterProjectSelect() {
  const select = document.getElementById('masterProjectSelect');
  if (!select) return;
  
  const options = db.masterProjects.map(master => 
    `<option value="${master.id}">${escapeHtml(master.name)} - ${escapeHtml(master.location)}</option>`
  ).join('');
  
  select.innerHTML = options;
}

function updateUnitNumbers() {
  const masterId = document.getElementById('masterProjectSelect').value;
  const master = db.masterProjects.find(m => m.id === masterId);
  if (!master) return;
  
  // Suggest unit numbers based on existing units
  const existingUnits = db.inventoryUnits.filter(u => u.masterProjectId === masterId);
  const existingNumbers = existingUnits.map(u => u.unitNumber);
  
  // Find next available number
  let nextNumber = 1;
  while (existingNumbers.includes(nextNumber.toString())) {
    nextNumber++;
  }
  
  document.querySelector('#inventoryUnitForm input[name="unitNumber"]').value = nextNumber;
}

function calculateUnitValue() {
  const size = parseFloat(document.querySelector('#inventoryUnitForm input[name="size"]').value) || 0;
  const rate = parseFloat(document.querySelector('#inventoryUnitForm input[name="rate"]').value) || 0;
  const totalValue = size * rate;
  document.getElementById('unitTotalValue').value = totalValue.toFixed(2);
}

// Form Submission Functions
function submitMasterProjectForm() {
  const form = document.getElementById('masterProjectForm');
  const formData = new FormData(form);
  
  try {
    const masterProject = {
      id: generateId('master'),
      name: formData.get('name'),
      code: formData.get('code'),
      location: formData.get('location'),
      type: formData.get('type'),
      totalArea: parseFloat(formData.get('totalArea')) || 0,
      plannedUnits: parseInt(formData.get('plannedUnits')) || 0,
      baseRate: parseFloat(formData.get('baseRate')) || 0,
      description: formData.get('description') || '',
      phase: formData.get('phase'),
      status: formData.get('status') || 'active',
      createdAt: new Date().toISOString(),
      updatedAt: new Date().toISOString()
    };
    
    db.masterProjects.push(masterProject);
    saveToStorage();
    
    closeAddMasterProjectModal();
    renderInventoryTables();
    
    showNotification('success', 'Master Project Added', 
      `${masterProject.name} has been added to inventory.`);
    
    return true;
  } catch (error) {
    showNotification('error', 'Error', error.message);
    return false;
  }
}

function submitInventoryUnitForm() {
  const form = document.getElementById('inventoryUnitForm');
  const formData = new FormData(form);
  
  try {
    const size = parseFloat(formData.get('size')) || 0;
    const rate = parseFloat(formData.get('rate')) || 0;
    const totalValue = size * rate;
    
    if (totalValue <= 0) {
      throw new Error('Total value must be greater than 0');
    }
    
    const inventoryUnit = {
      id: generateId('unit'),
      masterProjectId: formData.get('masterProjectId'),
      unitNumber: formData.get('unitNumber'),
      unitType: formData.get('unitType'),
      size: size,
      rate: rate,
      totalValue: totalValue,
      facing: formData.get('facing'),
      status: formData.get('status') || 'available',
      remarks: formData.get('remarks') || '',
      createdAt: new Date().toISOString(),
      updatedAt: new Date().toISOString()
    };
    
    // Check for duplicate unit number
    const duplicate = db.inventoryUnits.find(u => 
      u.masterProjectId === inventoryUnit.masterProjectId && 
      u.unitNumber === inventoryUnit.unitNumber
    );
    
    if (duplicate) {
      throw new Error(`Unit ${inventoryUnit.unitNumber} already exists in this project`);
    }
    
    db.inventoryUnits.push(inventoryUnit);
    saveToStorage();
    
    closeAddInventoryUnitModal();
    renderInventoryTables();
    
    showNotification('success', 'Unit Added', 
      `Unit ${inventoryUnit.unitNumber} has been added to inventory.`);
    
    return true;
  } catch (error) {
    showNotification('error', 'Error', error.message);
    return false;
  }
}

// View Master Project Details
function viewMasterProject(masterId) {
  const master = db.masterProjects.find(m => m.id === masterId);
  if (!master) return;
  
  const units = db.inventoryUnits.filter(u => u.masterProjectId === masterId);
  const soldUnits = units.filter(u => u.status === 'sold');
  const availableUnits = units.filter(u => u.status === 'available');
  const reservedUnits = units.filter(u => u.status === 'reserved');
  
  const totalValue = units.reduce((sum, unit) => sum + (unit.totalValue || 0), 0);
  const soldValue = soldUnits.reduce((sum, unit) => sum + (unit.totalValue || 0), 0);
  
  let html = `
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px;">
      <!-- Master Project Details -->
      <div>
        <h4 style="margin-bottom: 16px;">Master Project Information</h4>
        <div style="background: var(--gray-50); padding: 20px; border-radius: var(--radius);">
          <div style="display: grid; gap: 12px;">
            <div><strong>Project Name:</strong> ${escapeHtml(master.name)}</div>
            ${master.code ? `<div><strong>Project Code:</strong> ${escapeHtml(master.code)}</div>` : ''}
            <div><strong>Location:</strong> ${escapeHtml(master.location)}</div>
            <div><strong>Type:</strong> ${master.type.toUpperCase()}</div>
            <div><strong>Phase:</strong> ${master.phase.replace('_', ' ').toUpperCase()}</div>
            <div><strong>Status:</strong> ${master.status.toUpperCase()}</div>
            ${master.totalArea > 0 ? `<div><strong>Total Area:</strong> ${master.totalArea} Marla</div>` : ''}
            ${master.plannedUnits > 0 ? `<div><strong>Planned Units:</strong> ${master.plannedUnits}</div>` : ''}
            ${master.baseRate > 0 ? `<div><strong>Base Rate:</strong> ${formatCurrency(master.baseRate)}/Marla</div>` : ''}
            ${master.description ? `<div><strong>Description:</strong> ${escapeHtml(master.description)}</div>` : ''}
            <div><strong>Created:</strong> ${formatDate(master.createdAt)}</div>
          </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="mt-3">
          <button class="btn btn-primary" onclick="openAddInventoryUnitModalForMaster('${masterId}')">
            üèó Add Unit to This Project
          </button>
        </div>
      </div>
      
      <!-- Inventory Summary -->
      <div>
        <h4 style="margin-bottom: 16px;">Inventory Summary</h4>
        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 12px;">
          <div style="background: white; padding: 16px; border-radius: var(--radius); border: 1px solid var(--gray-200); text-align: center;">
            <div style="font-size: 0.75rem; color: var(--gray-600);">Total Units</div>
            <div style="font-size: 1.5rem; font-weight: 700;">${units.length}</div>
          </div>
          <div style="background: white; padding: 16px; border-radius: var(--radius); border: 1px solid var(--gray-200); text-align: center;">
            <div style="font-size: 0.75rem; color: var(--gray-600);">Available</div>
            <div style="font-size: 1.5rem; font-weight: 700; color: var(--success);">${availableUnits.length}</div>
          </div>
          <div style="background: white; padding: 16px; border-radius: var(--radius); border: 1px solid var(--gray-200); text-align: center;">
            <div style="font-size: 0.75rem; color: var(--gray-600);">Sold</div>
            <div style="font-size: 1.5rem; font-weight: 700; color: var(--primary);">${soldUnits.length}</div>
          </div>
          <div style="background: white; padding: 16px; border-radius: var(--radius); border: 1px solid var(--gray-200); text-align: center;">
            <div style="font-size: 0.75rem; color: var(--gray-600);">Reserved</div>
            <div style="font-size: 1.5rem; font-weight: 700; color: var(--warning);">${reservedUnits.length}</div>
          </div>
        </div>
        
        <!-- Value Summary -->
        <div class="mt-3" style="background: white; padding: 20px; border-radius: var(--radius); border: 1px solid var(--gray-200);">
          <h5 style="margin-bottom: 12px;">Value Summary</h5>
          <div style="display: grid; gap: 8px;">
            <div style="display: flex; justify-content: space-between;">
              <span>Total Inventory Value:</span>
              <span class="font-semibold">${formatCurrency(totalValue)}</span>
            </div>
            <div style="display: flex; justify-content: space-between;">
              <span>Sold Value:</span>
              <span class="font-semibold text-primary">${formatCurrency(soldValue)}</span>
            </div>
            <div style="display: flex; justify-content: space-between;">
              <span>Available Value:</span>
              <span class="font-semibold text-success">${formatCurrency(totalValue - soldValue)}</span>
            </div>
            ${master.plannedUnits > 0 ? `
              <div style="display: flex; justify-content: space-between; margin-top: 8px; padding-top: 8px; border-top: 1px solid var(--gray-200);">
                <span>Development Progress:</span>
                <span class="font-semibold">${((units.length / master.plannedUnits) * 100).toFixed(1)}%</span>
              </div>
            ` : ''}
          </div>
        </div>
      </div>
    </div>
    
    <!-- Unit List -->
    <div class="mt-4">
      <h4 style="margin-bottom: 16px;">Unit Details (${units.length} units)</h4>
      <div style="max-height: 300px; overflow-y: auto;">
        ${units.length === 0 ? `
          <div style="text-align: center; color: var(--gray-400); padding: 20px;">
            No units added yet
          </div>
        ` : `
          <table style="width: 100%; border-collapse: collapse;">
            <thead style="background: var(--gray-50);">
              <tr>
                <th style="padding: 12px; text-align: left; border-bottom: 1px solid var(--gray-200);">Unit #</th>
                <th style="padding: 12px; text-align: left; border-bottom: 1px solid var(--gray-200);">Type</th>
                <th style="padding: 12px; text-align: left; border-bottom: 1px solid var(--gray-200);">Size</th>
                <th style="padding: 12px; text-align: left; border-bottom: 1px solid var(--gray-200);">Value</th>
                <th style="padding: 12px; text-align: left; border-bottom: 1px solid var(--gray-200);">Status</th>
                <th style="padding: 12px; text-align: left; border-bottom: 1px solid var(--gray-200);">Customer</th>
              </tr>
            </thead>
            <tbody>
              ${units.map(unit => {
                const project = db.projects.find(p => 
                  p.name === master.name && p.unit === unit.unitNumber
                );
                const customer = project ? db.customers.find(c => c.id === project.customerId) : null;
                
                const statusBadge = unit.status === 'available' ? 'badge-success' :
                                   unit.status === 'sold' ? 'badge-primary' :
                                   unit.status === 'reserved' ? 'badge-warning' :
                                   'badge-danger';
                
                return `
                  <tr>
                    <td style="padding: 12px; border-bottom: 1px solid var(--gray-100);">${unit.unitNumber}</td>
                    <td style="padding: 12px; border-bottom: 1px solid var(--gray-100);">${unit.unitType.toUpperCase()}</td>
                    <td style="padding: 12px; border-bottom: 1px solid var(--gray-100);">${unit.size} Marla</td>
                    <td style="padding: 12px; border-bottom: 1px solid var(--gray-100);">${formatCurrency(unit.totalValue)}</td>
                    <td style="padding: 12px; border-bottom: 1px solid var(--gray-100);">
                      <span class="badge ${statusBadge}">${unit.status.toUpperCase()}</span>
                    </td>
                    <td style="padding: 12px; border-bottom: 1px solid var(--gray-100);">
                      ${customer ? `
                        <span class="cursor-pointer text-primary" 
                              onclick="openCustomerModal('${customer.id}')">
                          ${escapeHtml(customer.name)}
                        </span>
                      ` : '-'}
                    </td>
                  </tr>
                `;
              }).join('')}
            </tbody>
          </table>
        `}
      </div>
    </div>
  `;
  
  document.getElementById('viewMasterProjectTitle').textContent = master.name;
  document.getElementById('viewMasterProjectContent').innerHTML = html;
  document.getElementById('viewMasterProjectModal').classList.add('show');
}

function closeViewMasterProjectModal() {
  document.getElementById('viewMasterProjectModal').classList.remove('show');
}

function openAddInventoryUnitModalForMaster(masterId) {
  closeViewMasterProjectModal();
  openAddInventoryUnitModal();
  document.getElementById('masterProjectSelect').value = masterId;
  updateUnitNumbers();
}














// Financial Calculations
function calculateProjectFinancials(project) {
  if (!project) return {
    totalSale: 0,
    totalReceived: 0,
    totalReceivable: 0,
    totalOverdue: 0,
    totalFuture: 0,
    percentagePaid: 0
  };
  
  // DEBUG: Log project details
  console.log('Calculating financials for project:', project.name, project.unit, {
    sale: project.sale,
    received: project.received,
    installments: project.installments?.length
  });
  
  const totalSale = Number(project.sale) || 0;
  const totalReceived = Number(project.received) || 0;
  const totalReceivable = Math.max(0, totalSale - totalReceived);
  
  let totalOverdue = 0;
  let totalFuture = 0;
  const today = getDateString();
  const todayDate = new Date(today);
  todayDate.setHours(0, 0, 0, 0);
  
  // Calculate installment-based financials
  if (project.installments && project.installments.length > 0) {
    project.installments.forEach(installment => {
      const remaining = Number(installment.amount) - (Number(installment.partialPaid) || 0);
      
      if (!installment.paid && remaining > 0) {
        const dueDate = new Date(installment.dueDate);
        dueDate.setHours(0, 0, 0, 0);
        
        if (dueDate <= todayDate) {
          totalOverdue += remaining;
        } else {
          totalFuture += remaining;
        }
      }
    });
  }
  
  // DEBUG: Log calculated values
  console.log('Financials calculated:', {
    totalSale,
    totalReceived,
    totalReceivable,
    totalOverdue,
    totalFuture,
    percentagePaid: totalSale > 0 ? ((totalReceived / totalSale) * 100) : 0
  });
  
  return {
    totalSale,
    totalReceived,
    totalReceivable,
    totalOverdue,
    totalFuture,
    percentagePaid: totalSale > 0 ? ((totalReceived / totalSale) * 100) : 0
  };
}




function calculateCustomerFinancials(customerId) {
  const masterProjects = getCustomerMasterProjects(customerId);
  
  let totalSale = 0;
  let totalReceived = 0;
  let totalReceivable = 0;
  let totalOverdue = 0;
  let totalFuture = 0;
  
  masterProjects.forEach(master => {
    totalSale += master.totalSale;
    totalReceived += master.totalReceived;
    totalReceivable += master.totalReceivable;
    totalOverdue += master.totalOverdue;
    totalFuture += master.totalFuture;
  });
  
  return {
    totalSale,
    totalReceived,
    totalReceivable,
    totalOverdue,
    totalFuture,
    percentagePaid: totalSale > 0 ? ((totalReceived / totalSale) * 100) : 0,
    masterProjects: masterProjects.length,
    totalUnits: masterProjects.reduce((sum, master) => sum + master.units.length, 0)
  };
}




// Master Project Functions
function getMasterProjects() {
  const masterProjects = {};
  
  db.projects.forEach(project => {
    const masterName = project.name;
    if (!masterProjects[masterName]) {
      // Find master project details from inventory
      const master = db.masterProjects.find(m => m.name === masterName);
      const inventoryUnits = db.inventoryUnits.filter(u => {
        const unitMaster = db.masterProjects.find(m => m.id === u.masterProjectId);
        return unitMaster && unitMaster.name === masterName;
      });
      
      masterProjects[masterName] = {
        name: masterName,
        location: master?.location || 'Unknown',
        type: master?.type || 'commercial',
        totalUnits: inventoryUnits.length,
        availableUnits: inventoryUnits.filter(u => u.status === 'available').length,
        soldUnits: inventoryUnits.filter(u => u.status === 'sold').length,
        units: [],
        totalSale: 0,
        totalReceived: 0,
        totalReceivable: 0,
        totalOverdue: 0,
        totalFuture: 0
      };
    }
    
    const master = masterProjects[masterName];
    const financials = calculateProjectFinancials(project);
    
    master.units.push({
      id: project.id,
      unit: project.unit,
      customerId: project.customerId,
      sale: financials.totalSale,
      received: financials.totalReceived,
      receivable: financials.totalReceivable,
      overdue: financials.totalOverdue,
      future: financials.totalFuture,
      installments: project.installments || []
    });
    
    master.totalSale += financials.totalSale;
    master.totalReceived += financials.totalReceived;
    master.totalReceivable += financials.totalReceivable;
    master.totalOverdue += financials.totalOverdue;
    master.totalFuture += financials.totalFuture;
  });
  
  return Object.values(masterProjects);
}

// Export Inventory Report
function exportInventoryReport() {
  try {
    const { jsPDF } = window.jspdf;
    const doc = new jsPDF();
    
    doc.setFontSize(16);
    doc.setTextColor(30, 58, 138);
    doc.text('SITARA BUILDERS CRM - INVENTORY REPORT', 20, 20);
    
    doc.setFontSize(10);
    doc.setTextColor(100, 116, 139);
    doc.text(`Generated: ${new Date().toLocaleDateString()}`, 20, 30);
    
    let yPos = 45;
    
    // Summary
    doc.setFontSize(12);
    doc.setTextColor(30, 41, 59);
    doc.text('INVENTORY SUMMARY', 20, yPos);
    yPos += 10;
    
    const totalMasterProjects = db.masterProjects.length;
    const totalInventoryUnits = db.inventoryUnits.length;
    const availableUnits = db.inventoryUnits.filter(u => u.status === 'available').length;
    const soldUnits = db.inventoryUnits.filter(u => u.status === 'sold').length;
    const totalInventoryValue = db.inventoryUnits.reduce((sum, unit) => 
      sum + (Number(unit.totalValue) || 0), 0
    );
    
    const summaryData = [
      ['Total Master Projects', totalMasterProjects],
      ['Total Inventory Units', totalInventoryUnits],
      ['Available Units', availableUnits],
      ['Sold Units', soldUnits],
      ['Total Inventory Value', formatCurrency(totalInventoryValue)]
    ];
    
    summaryData.forEach(row => {
      doc.text(row[0], 25, yPos);
      doc.text(String(row[1]), 150, yPos, { align: 'right' });
      yPos += 7;
    });
    
    yPos += 10;
    
    // Master Projects List
    doc.setFontSize(12);
    doc.text('MASTER PROJECTS INVENTORY', 20, yPos);
    yPos += 10;
    
    db.masterProjects.forEach((master, idx) => {
      if (yPos > 270) {
        doc.addPage();
        yPos = 20;
      }
      
      const units = db.inventoryUnits.filter(u => u.masterProjectId === master.id);
      const soldUnitsCount = units.filter(u => u.status === 'sold').length;
      const availableUnitsCount = units.filter(u => u.status === 'available').length;
      const totalValue = units.reduce((sum, unit) => sum + (unit.totalValue || 0), 0);
      
      doc.setFontSize(10);
      doc.setFont(undefined, 'bold');
      doc.text(`${idx + 1}. ${master.name}`, 25, yPos);
      doc.setFont(undefined, 'normal');
      yPos += 7;
      
      doc.setFontSize(9);
      doc.text(`Location: ${master.location}`, 30, yPos);
      yPos += 5;
      doc.text(`Type: ${master.type.toUpperCase()}`, 30, yPos);
      doc.text(`Units: ${units.length} (${availableUnitsCount} available, ${soldUnitsCount} sold)`, 100, yPos);
      yPos += 5;
      doc.text(`Total Value: ${formatCurrency(totalValue)}`, 30, yPos);
      yPos += 8;
    });
    
    doc.save(`inventory_report_${getDateString()}.pdf`);
    
    showNotification('success', 'Report Generated', 
      'Inventory report has been generated successfully.');
  } catch (error) {
    showNotification('error', 'Export Failed', error.message);
  }
}

// Sell Inventory Unit (Create Project from Inventory)
function sellInventoryUnit(unitId) {
  const unit = db.inventoryUnits.find(u => u.id === unitId);
  if (!unit) return;
  
  const master = db.masterProjects.find(m => m.id === unit.masterProjectId);
  if (!master) return;
  
  // Open project creation modal with pre-filled data
  openAddProjectModal();
  
  // Find a customer with this unit (if already sold)
  const existingProject = db.projects.find(p => 
    p.name === master.name && p.unit === unit.unitNumber
  );
  
  if (existingProject) {
    // Update existing project
    const customer = db.customers.find(c => c.id === existingProject.customerId);
    document.getElementById('projCust').value = existingProject.customerId;
    document.getElementById('projBroker').value = existingProject.brokerId || '';
    document.getElementById('marlas').value = unit.size;
    document.getElementById('rate').value = unit.rate;
    recalcSale();
    
    showNotification('info', 'Existing Project', 
      `This unit is already linked to ${customer?.name || 'a customer'}.`);
  } else {
    // Pre-fill project details from inventory
    document.getElementById('marlas').value = unit.size;
    document.getElementById('rate').value = unit.rate;
    recalcSale();
    
    // Set project name to master project name
    document.querySelector('#addProjectModal input[name="project"]').value = master.name;
    document.querySelector('#addProjectModal input[name="unit"]').value = unit.unitNumber;
  }
}

// Filter Functions
function filterInventoryTable() {
  renderInventoryUnitsTable();
}




function getCustomerMasterProjects(customerId) {
  const customerProjects = db.projects.filter(p => p.customerId === customerId);
  const masterProjects = {};
  
  customerProjects.forEach(project => {
    const masterName = project.name;
    if (!masterProjects[masterName]) {


    const master = db.masterProjects.find(m => m.name === masterName);
      const inventoryUnits = db.inventoryUnits.filter(u => {
        const unitMaster = db.masterProjects.find(m => m.id === u.masterProjectId);
        return unitMaster && unitMaster.name === masterName;
      });




      masterProjects[masterName] = {
        name: masterName,
        location: master?.location || 'Unknown',
        type: master?.type || 'commercial',
        totalUnits: inventoryUnits.length,
        availableUnits: inventoryUnits.filter(u => u.status === 'available').length,
        soldUnits: inventoryUnits.filter(u => u.status === 'sold').length,
        units: [],
        totalSale: 0,
        totalReceived: 0,
        totalReceivable: 0,
        totalOverdue: 0,
        totalFuture: 0
      };
    }
    
    const financials = calculateProjectFinancials(project);
    const master = masterProjects[masterName];
    
    master.units.push({
      id: project.id,
      unit: project.unit,
      sale: financials.totalSale,
      received: financials.totalReceived,
      receivable: financials.totalReceivable,
      overdue: financials.totalOverdue,
      future: financials.totalFuture,
      installments: project.installments || []
    });
    
    master.totalSale += financials.totalSale;
    master.totalReceived += financials.totalReceived;
    master.totalReceivable += financials.totalReceivable;
    master.totalOverdue += financials.totalOverdue;
    master.totalFuture += financials.totalFuture;
  });
  
  return Object.values(masterProjects);
}

function getMasterProjectInstallments(masterProject) {
  const allInstallments = [];

  const projectId = masterProject.id || masterProject.projectId || 'UNKNOWN_PROJECT';
  const projectName = masterProject.name || masterProject.project || 'Unknown Project';

  masterProject.units.forEach(unit => {
    if (unit.installments && unit.installments.length > 0) {
      unit.installments.forEach(inst => {
        allInstallments.push({
          ...inst,

          // üîπ Project context (CRITICAL for correct sorting)
          projectId,
          projectName,

          // üîπ Unit context
          unit: unit.unit || unit.unitNo || 'Unknown',
          unitId: unit.id || '',

          // üîπ Normalized fields
          amount: Number(inst.amount) || 0,
          partialPaid: Number(inst.partialPaid) || 0,
          number: Number(inst.number) || 0,
          dueDate: inst.dueDate || '',
          paid: Boolean(inst.paid)
        });
      });
    }
  });

  /*
    SORT ORDER:
    1Ô∏è‚É£ Project
    2Ô∏è‚É£ Unit
    3Ô∏è‚É£ Due Date
    4Ô∏è‚É£ Installment Number
  */
  return allInstallments.sort((a, b) => {

    // 1Ô∏è‚É£ Project separation (ABSOLUTE)
    if (a.projectId < b.projectId) return -1;
    if (a.projectId > b.projectId) return 1;

    // 2Ô∏è‚É£ Unit ordering within the SAME project
    if (a.unit < b.unit) return -1;
    if (a.unit > b.unit) return 1;

    // 3Ô∏è‚É£ Due date ordering within same unit
    const dateA = new Date(a.dueDate || '2100-01-01');
    const dateB = new Date(b.dueDate || '2100-01-01');

    if (dateA < dateB) return -1;
    if (dateA > dateB) return 1;

    // 4Ô∏è‚É£ Installment number
    return (a.number || 0) - (b.number || 0);
  });
}












function calculateBrokerFinancials(brokerId) {
  const brokeredProjects = db.projects.filter(p => p.brokerId === brokerId);
  
  let totalBrokeredSale = 0;
  let totalBrokeredReceived = 0;
  let totalCommission = 0;
  
  brokeredProjects.forEach(project => {
    const financials = calculateProjectFinancials(project);
    totalBrokeredSale += financials.totalSale;
    totalBrokeredReceived += financials.totalReceived;
    totalCommission += (financials.totalSale * (db.settings.commissionRate || 2.5)) / 100;
  });
  
  return {
    totalBrokeredSale,
    totalBrokeredReceived,
    totalCommission,
    commissionRate: db.settings.commissionRate || 2.5
  };
}

function calculateOverallFinancials() {
  const masterProjects = getMasterProjects();
  
  let totalSale = 0;
  let totalReceived = 0;
  let totalReceivable = 0;
  let totalOverdue = 0;
  let totalFuture = 0;
  
  masterProjects.forEach(master => {
    totalSale += master.totalSale;
    totalReceived += master.totalReceived;
    totalReceivable += master.totalReceivable;
    totalOverdue += master.totalOverdue;
    totalFuture += master.totalFuture;
  });
  
  return {
    totalSale,
    totalReceived,
    totalReceivable,
    totalOverdue,
    totalFuture,
    percentagePaid: totalSale > 0 ? ((totalReceived / totalSale) * 100) : 0,
    totalMasterProjects: masterProjects.length,
    totalUnits: masterProjects.reduce((sum, master) => sum + master.units.length, 0)
  };
}




// Navigation - FIXED VERSION
function showSection(sectionId) {
  console.log('Showing section:', sectionId);
  
  // Hide all sections
  document.querySelectorAll('.section').forEach(section => {
    section.classList.remove('active');
  });
  
  // Remove active class from all nav buttons
  document.querySelectorAll('.nav-btn').forEach(btn => {
    btn.classList.remove('active');
  });
  
  // Show selected section
  const sectionElement = document.getElementById(sectionId);
  if (sectionElement) {
    sectionElement.classList.add('active');
    
    // Find and activate the corresponding nav button
    const navButtons = document.querySelectorAll('.nav-btn');
    navButtons.forEach(btn => {
      if (btn.getAttribute('data-section') === sectionId) {
        btn.classList.add('active');
      }
    });
    
    // Refresh section data
    refreshSection(sectionId);
  } else {
    console.error('Section not found:', sectionId);
    // Default to dashboard if section not found
    showSection('dashboard');
  }
}



function refreshSection(sectionId) {
  console.log('Refreshing section:', sectionId);
  
  switch(sectionId) {
    case 'dashboard':
      updateDashboard();
      break;
    case 'customers':
      renderCustomersTable();
      break;
    case 'projects':
      renderProjectsTable();
      break;
    case 'interactions':
      renderInteractionsTable();
      renderLeadsDashboard();
      break;
    case 'receipts':
      renderReceiptsTable();
      break;
    case 'reports':
      updateReports();
      break;
    case 'inventory': // NEW
      renderInventoryTables();
      updateReconciliationStats();
      break;
      default:
      console.warn('Unknown section:', sectionId);
  }
}

// Dashboard Functions
function updateDashboard() {
  const financials = calculateOverallFinancials();
  
  // Update stats
  document.getElementById('totalCustomers').textContent = db.customers.length;
  document.getElementById('totalProjects').textContent = db.projects.length;
  document.getElementById('totalSaleValue').textContent = formatCurrency(financials.totalSale);
  document.getElementById('totalReceived').textContent = formatCurrency(financials.totalReceived);
  document.getElementById('totalReceivable').textContent = formatCurrency(financials.totalReceivable);
  document.getElementById('totalOverdue').textContent = formatCurrency(financials.totalOverdue);
  document.getElementById('totalFuture').textContent = formatCurrency(financials.totalFuture);
  document.getElementById('totalBrokers').textContent = db.customers.filter(c => 
    c.type === 'broker' || c.type === 'both').length;
  
  // Render follow-up leads
  renderFollowUpLeads();
  
  // Render recent activities
  renderRecentActivities();
}

function renderFollowUpLeads() {
  const container = document.getElementById('followupLeads');
  if (!container) return;
  
  const today = new Date();
  const followUpInteractions = db.interactions.filter(i => 
    i.status === 'follow_up' && i.nextFollowUp
  ).sort((a, b) => new Date(a.nextFollowUp) - new Date(b.nextFollowUp));
  
  // Categorize by priority/urgency
  const categories = {
    urgent: [], // 1-2 days
    high: [],   // 3-7 days
    medium: [], // 8-14 days
    low: []     // 15+ days
  };
  
  followUpInteractions.forEach(interaction => {
    const followUpDate = new Date(interaction.nextFollowUp);
    const daysDiff = calculateDaysBetween(today, followUpDate);
    
    if (daysDiff <= 2) categories.urgent.push(interaction);
    else if (daysDiff <= 7) categories.high.push(interaction);
    else if (daysDiff <= 14) categories.medium.push(interaction);
    else categories.low.push(interaction);
  });
  
  // Update stats
  const total = followUpInteractions.length;
  const urgentCount = categories.urgent.length;
  const highCount = categories.high.length;
  
  const statsElement = document.getElementById('followupStats');
  if (statsElement) {
    statsElement.textContent = 
      `${total} follow-ups (${urgentCount} urgent, ${highCount} high)`;
  }
  
  // Render cards
  let html = '';
  
  // Show urgent and high priority first
  ['urgent', 'high', 'medium', 'low'].forEach(category => {
    const interactions = categories[category];
    
    if (interactions.length === 0) return;
    
    // Limit to 2 cards per category for better UI
    interactions.slice(0, 2).forEach(interaction => {
      const contact = db.customers.find(c => 
        c.id === (interaction.customerId || interaction.brokerId)
      );
      
      if (!contact) return;
      
      const followUpDate = new Date(interaction.nextFollowUp);
      const daysDiff = calculateDaysBetween(today, followUpDate);
      
      html += `
        <div class="followup-card ${category}" onclick="openCustomerModal('${contact.id}')">
          <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 12px;">
            <div>
              <div style="font-weight: 700; color: var(--gray-900); margin-bottom: 4px;">
                ${escapeHtml(contact.name)}
              </div>
              <div style="font-size: 0.85rem; color: var(--gray-600);">
                ${contact.type === 'broker' ? 'ü§ù Broker' : 'üë§ Customer'}
              </div>
            </div>
            <div style="font-size: 0.75rem; font-weight: 700; padding: 4px 12px; border-radius: 12px; 
                  background: ${category === 'urgent' ? '#fee2e2' : 
                             category === 'high' ? '#fef3c7' : 
                             category === 'medium' ? '#e0f2fe' : '#d1fae5'}; 
                  color: ${category === 'urgent' ? '#991b1b' : 
                          category === 'high' ? '#92400e' : 
                          category === 'medium' ? '#1e40af' : '#065f46'};">
              ${daysDiff === 0 ? 'Today' : daysDiff === 1 ? 'Tomorrow' : `${daysDiff} days`}
            </div>
          </div>
          <div style="font-size: 0.9rem; color: var(--gray-700); margin-bottom: 8px;">
            ${escapeHtml(interaction.type.replace('_', ' ').toUpperCase())}
          </div>
          <div style="font-size: 0.85rem; color: var(--gray-600); margin-bottom: 12px; 
                max-height: 40px; overflow: hidden; text-overflow: ellipsis;">
            ${escapeHtml(interaction.notes || 'No notes')}
          </div>
          <button class="btn btn-sm btn-primary" 
                  onclick="event.stopPropagation(); logFollowUp('${contact.id}', '${interaction.contactType || 'customer'}')" 
                  style="width: 100%;">
            Log Follow-up
          </button>
        </div>
      `;
    });
  });
  
  container.innerHTML = html || `
    <div style="grid-column: 1 / -1; text-align: center; padding: 40px; color: var(--gray-400);">
      <div style="font-size: 3rem; margin-bottom: 16px;">üéâ</div>
      <div style="font-size: 1.1rem; font-weight: 600; color: var(--gray-600);">
        No pending follow-ups
      </div>
      <div style="margin-top: 8px;">All interactions are up to date</div>
    </div>
  `;
}

function renderRecentActivities() {
  const container = document.getElementById('recentActivities');
  if (!container) return;
  
  // Combine recent activities from different sources
  const activities = [];
  
  // Recent interactions
  db.interactions
    .sort((a, b) => new Date(b.date) - new Date(a.date))
    .slice(0, 5)
    .forEach(interaction => {
      const contact = db.customers.find(c => 
        c.id === (interaction.customerId || interaction.brokerId)
      );
      
      if (contact) {
        activities.push({
          date: interaction.date,
          type: 'interaction',
          description: `${interaction.type.replace('_', ' ')} with ${contact.name}`,
          contact: contact.name,
          status: interaction.status
        });
      }
    });
  
  // Recent receipts
  db.receipts
    .sort((a, b) => new Date(b.date) - new Date(a.date))
    .slice(0, 3)
    .forEach(receipt => {
      const customer = db.customers.find(c => c.id === receipt.customerId);
      const project = db.projects.find(p => p.id === receipt.projectId);
      
      if (customer && project) {
        activities.push({
          date: receipt.date,
          type: 'receipt',
          description: `Payment received for ${project.name}`,
          contact: customer.name,
          status: 'completed'
        });
      }
    });
  
  // Sort by date and take top 10
  activities.sort((a, b) => new Date(b.date) - new Date(a.date));
  
  const html = activities.slice(0, 10).map(activity => {
    const statusBadge = activity.status === 'follow_up' ? 'badge-warning' :
                       activity.status === 'completed' ? 'badge-success' :
                       'badge-primary';
    
    return `
      <tr>
        <td>${formatDateTime(activity.date)}</td>
        <td>
          <span class="badge ${activity.type === 'interaction' ? 'badge-primary' : 'badge-success'}">
            ${activity.type === 'interaction' ? 'üí¨' : 'üí∞'} 
            ${activity.type.toUpperCase()}
          </span>
        </td>
        <td>${escapeHtml(activity.description)}</td>
        <td>${escapeHtml(activity.contact)}</td>
        <td>
          <span class="badge ${statusBadge}">
            ${activity.status.replace('_', ' ').toUpperCase()}
          </span>
        </td>
      </tr>
    `;
  }).join('');
  
  container.innerHTML = html || `
    <tr>
      <td colspan="5" style="text-align: center; color: var(--gray-400); padding: 40px;">
        No recent activities
      </td>
    </tr>
  `;
}









// Table Rendering Functions
function renderCustomersTable() {
  const tbody = document.querySelector('#customersTable tbody');
  const pagination = document.getElementById('customerPagination');
  
  if (!tbody) return;
  
  // Get filters
  const searchTerm = document.getElementById('customerSearch')?.value.toLowerCase() || '';
  const typeFilter = document.getElementById('customerTypeFilter')?.value || 'all';
  const statusFilter = document.getElementById('customerStatusFilter')?.value || 'all';
  
  // Filter customers
  let filtered = db.customers.filter(customer => {
    // Search filter
    if (searchTerm) {
      const searchFields = [
        customer.name,
        customer.phone,
        customer.cnic,
        customer.email,
        customer.company,
        customer.address
      ].join(' ').toLowerCase();
      
      if (!searchFields.includes(searchTerm)) return false;
    }
    
    // Type filter
    if (typeFilter !== 'all' && customer.type !== typeFilter) return false;
    
    // Status filter
    if (statusFilter !== 'all' && customer.status !== statusFilter) return false;
    
    return true;
  });
  
  // Calculate pagination
  const totalPages = Math.ceil(filtered.length / ITEMS_PER_PAGE);
  const current = currentPage.customers;
  const startIdx = (current - 1) * ITEMS_PER_PAGE;
  const endIdx = startIdx + ITEMS_PER_PAGE;
  const pageCustomers = filtered.slice(startIdx, endIdx);
  
  // Render table
  const html = pageCustomers.map(customer => {
    const customerProjects = db.projects.filter(p => p.customerId === customer.id);
    const financials = calculateCustomerFinancials(customer.id);
    
    const typeBadge = customer.type === 'customer' ? 'badge-primary' :
                     customer.type === 'broker' ? 'badge-success' :
                     'badge-warning';
    
    const statusBadge = customer.status === 'active' ? 'badge-success' : 'badge-danger';
    
    return `
      <tr>
        <td><span class="text-muted">${customer.id.substring(0, 8)}</span></td>
        <td>
  <span class="cursor-pointer text-primary font-semibold" 
        onclick="event.stopPropagation(); openCustomerModal('${customer.id}')">
    ${escapeHtml(customer.name)}
  </span>
</td>
        <td>${escapeHtml(customer.phone)}</td>
        <td>${escapeHtml(customer.cnic)}</td>
        <td><span class="badge ${typeBadge}">${customer.type.toUpperCase()}</span></td>
        <td><span class="font-semibold">${customerProjects.length}</span></td>
        <td><span class="badge ${statusBadge}">${customer.status.toUpperCase()}</span></td>
        <td>
          <div class="btn-group">
            <button class="action-btn btn-view" 
                    onclick="openCustomerModal('${customer.id}')">
              View
            </button>
            <button class="action-btn btn-edit" 
                    onclick="${customer.type === 'broker' || customer.type === 'both' ? 'editBroker' : 'editCustomer'}('${customer.id}')">
              Edit
            </button>
            <button class="action-btn btn-danger" 
                    onclick="deleteCustomer('${customer.id}')">
              Delete
            </button>
          </div>
        </td>
      </tr>
    `;
  }).join('');
  
  tbody.innerHTML = html || `
    <tr>
      <td colspan="8" style="text-align: center; color: var(--gray-400); padding: 40px;">
        No customers found
      </td>
    </tr>
  `;
  
  // Render pagination
  renderPagination(pagination, current, totalPages, 'customers');
}





function updateProjectBroker(projectId, newBrokerId) {
  const project = db.projects.find(p => p.id === projectId);
  if (!project) return;
  
  const oldBroker = project.brokerId ? db.customers.find(c => c.id === project.brokerId) : null;
  const newBroker = newBrokerId ? db.customers.find(c => c.id === newBrokerId) : null;
  
  project.brokerId = newBrokerId || null;
  project.updatedAt = new Date().toISOString();
  
  // Log the change as an interaction
  const interaction = {
    id: generateId('int'),
    contactType: 'customer',
    customerId: project.customerId,
    type: 'update',
    status: 'resolved',
    priority: 'medium',
    date: new Date().toISOString(),
    notes: `Broker updated: ${oldBroker ? oldBroker.name : 'None'} ‚Üí ${newBroker ? newBroker.name : 'None'}`,
    createdAt: new Date().toISOString()
  };
  
  db.interactions.push(interaction);
  saveToStorage();
  
  showNotification('success', 'Broker Updated', 
    `Project broker has been updated.`);
  
  refreshSection('projects');
}








function renderProjectsTable() {
  const tbody = document.querySelector('#projectsTable tbody');
  const pagination = document.getElementById('projectPagination');
  
  if (!tbody) return;
  
  // Get filters
  const searchTerm = document.getElementById('projectSearch')?.value.toLowerCase() || '';
  const statusFilter = document.getElementById('projectStatusFilter')?.value || 'all';
  
  // Filter projects
  let filtered = db.projects.filter(project => {
    // Search filter
    if (searchTerm) {
      const customer = db.customers.find(c => c.id === project.customerId);
      const searchFields = [
        project.name,
        project.unit,
        project.notes,
        customer?.name || ''
      ].join(' ').toLowerCase();
      
      if (!searchFields.includes(searchTerm)) return false;
    }
    
    // Status filter
    if (statusFilter !== 'all' && project.status !== statusFilter) return false;
    
    return true;
  });
  
  // Calculate pagination
  const totalPages = Math.ceil(filtered.length / ITEMS_PER_PAGE);
  const current = currentPage.projects;
  const startIdx = (current - 1) * ITEMS_PER_PAGE;
  const endIdx = startIdx + ITEMS_PER_PAGE;
  const pageProjects = filtered.slice(startIdx, endIdx);
  
  // Render table
  const html = pageProjects.map(project => {
    const customer = db.customers.find(c => c.id === project.customerId);
    const broker = project.brokerId ? db.customers.find(c => c.id === project.brokerId) : null;
    const financials = calculateProjectFinancials(project);
    
    const statusBadge = project.status === 'active' ? 'badge-success' :
                       project.status === 'completed' ? 'badge-primary' :
                       'badge-danger';
    
    return `
      <tr>
        <td><span class="text-muted">${project.id.substring(0, 8)}</span></td>
        <td>
          <span class="cursor-pointer text-primary" 
                onclick="openCustomerModal('${project.customerId}')">
            ${escapeHtml(customer?.name || 'Unknown')}
          </span>
        </td>
        <td>
          ${broker ? `
            <span class="cursor-pointer text-success" 
                  onclick="openCustomerModal('${project.brokerId}')">
              ${escapeHtml(broker.name)}
            </span>
          ` : '<span class="text-muted">-</span>'}
        </td>
        <td>${escapeHtml(project.name)}</td>
        <td>${escapeHtml(project.unit)}</td>
        <td class="font-semibold">${formatCurrency(project.sale)}</td>
        <td class="text-success font-semibold">${formatCurrency(financials.totalReceived)}</td>
        <td class="font-semibold">${formatCurrency(financials.totalReceivable)}</td>
        <td class="text-danger font-semibold">${formatCurrency(financials.totalOverdue)}</td>
        <td>
          <div class="btn-group">
            <button class="action-btn btn-view" 
                    onclick="viewProject('${project.id}')">
              View
            </button>
            <button class="action-btn btn-edit" 
                    onclick="editProject('${project.id}')">
              Edit
            </button>
            <button class="action-btn btn-danger" 
                    onclick="deleteProject('${project.id}')">
              Delete
            </button>
          </div>
        </td>
      </tr>
    `;
  }).join('');
  
  tbody.innerHTML = html || `
    <tr>
      <td colspan="10" style="text-align: center; color: var(--gray-400); padding: 40px;">
        No projects found
      </td>
    </tr>
  `;
  
  // Render pagination
  renderPagination(pagination, current, totalPages, 'projects');
}

function renderInteractionsTable() {
  const tbody = document.querySelector('#interactionsTable tbody');
  const pagination = document.getElementById('interactionPagination');
  
  if (!tbody) return;
  
  // Get filters
  const searchTerm = document.getElementById('interactionSearch')?.value.toLowerCase() || '';
  const typeFilter = document.getElementById('interactionTypeFilter')?.value || 'all';
  const statusFilter = document.getElementById('interactionStatusFilter')?.value || 'all';
  
  // Filter interactions
  let filtered = db.interactions.filter(interaction => {
    // Search filter
    if (searchTerm) {
      const contact = db.customers.find(c => 
        c.id === (interaction.customerId || interaction.brokerId)
      );
      const searchFields = [
        interaction.notes || '',
        interaction.type,
        contact?.name || ''
      ].join(' ').toLowerCase();
      
      if (!searchFields.includes(searchTerm)) return false;
    }
    
    // Type filter
    if (typeFilter !== 'all' && interaction.type !== typeFilter) return false;
    
    // Status filter
    if (statusFilter !== 'all' && interaction.status !== statusFilter) return false;
    
    return true;
  }).sort((a, b) => new Date(b.date) - new Date(a.date));
  
  // Calculate pagination
  const totalPages = Math.ceil(filtered.length / ITEMS_PER_PAGE);
  const current = currentPage.interactions;
  const startIdx = (current - 1) * ITEMS_PER_PAGE;
  const endIdx = startIdx + ITEMS_PER_PAGE;
  const pageInteractions = filtered.slice(startIdx, endIdx);
  
  // Render table
  const html = pageInteractions.map(interaction => {
    const contact = db.customers.find(c => 
      c.id === (interaction.customerId || interaction.brokerId)
    );
    
    const priorityBadge = interaction.priority === 'urgent' ? 'badge-danger' :
                         interaction.priority === 'high' ? 'badge-warning' :
                         interaction.priority === 'medium' ? 'badge-primary' :
                         'badge-success';
    
    const statusBadge = interaction.status === 'follow_up' ? 'badge-warning' :
                       interaction.status === 'resolved' ? 'badge-success' :
                       'badge-primary';
    
    return `
      <tr>
        <td>${formatDateTime(interaction.date)}</td>
        <td>
          <span class="cursor-pointer text-primary" 
                onclick="openCustomerModal('${contact?.id || ''}')">
            ${escapeHtml(contact?.name || 'Unknown')}
          </span>
        </td>
        <td>
          <span class="badge badge-primary">
            ${interaction.type.replace('_', ' ').toUpperCase()}
          </span>
        </td>
        <td>
          <span class="badge ${statusBadge}">
            ${interaction.status.replace('_', ' ').toUpperCase()}
          </span>
        </td>
        <td>
          <span class="badge ${priorityBadge}">
            ${interaction.priority.toUpperCase()}
          </span>
        </td>
        <td style="max-width: 300px;">
          <div style="max-height: 60px; overflow: hidden; text-overflow: ellipsis;">
            ${escapeHtml(interaction.notes || 'No notes')}
          </div>
        </td>
        <td>
          <div class="btn-group">
            <button class="action-btn btn-danger" 
                    onclick="deleteInteraction('${interaction.id}')">
              Delete
            </button>
          </div>
        </td>
      </tr>
    `;
  }).join('');
  
  tbody.innerHTML = html || `
    <tr>
      <td colspan="7" style="text-align: center; color: var(--gray-400); padding: 40px;">
        No interactions found
      </td>
    </tr>
  `;
  
  // Render pagination
  renderPagination(pagination, current, totalPages, 'interactions');
}

function renderReceiptsTable() {
  const tbody = document.querySelector('#receiptsTable tbody');
  const pagination = document.getElementById('receiptPagination');
  
  if (!tbody) return;
  
  // Get filters
  const searchTerm = document.getElementById('receiptSearch')?.value.toLowerCase() || '';
  const methodFilter = document.getElementById('receiptMethodFilter')?.value || 'all';
  const dateFilter = document.getElementById('receiptDateFilter')?.value || '';
  
  // Filter receipts
  let filtered = db.receipts.filter(receipt => {
    // Search filter
    if (searchTerm) {
      const customer = db.customers.find(c => c.id === receipt.customerId);
      const project = db.projects.find(p => p.id === receipt.projectId);
      const searchFields = [
        receipt.reference || '',
        receipt.notes || '',
        customer?.name || '',
        project?.name || ''
      ].join(' ').toLowerCase();
      
      if (!searchFields.includes(searchTerm)) return false;
    }
    
    // Method filter
    if (methodFilter !== 'all' && receipt.method !== methodFilter) return false;
    
    // Date filter
    if (dateFilter && receipt.date !== dateFilter) return false;
    
    return true;
  }).sort((a, b) => new Date(b.date) - new Date(a.date));
  
  // Calculate pagination
  const totalPages = Math.ceil(filtered.length / ITEMS_PER_PAGE);
  const current = currentPage.receipts;
  const startIdx = (current - 1) * ITEMS_PER_PAGE;
  const endIdx = startIdx + ITEMS_PER_PAGE;
  const pageReceipts = filtered.slice(startIdx, endIdx);
  
  // Render table
  const html = pageReceipts.map(receipt => {
    const customer = db.customers.find(c => c.id === receipt.customerId);
    const project = db.projects.find(p => p.id === receipt.projectId);
    
    const methodBadge = receipt.method === 'cash' ? 'badge-success' :
                       receipt.method === 'bank_transfer' ? 'badge-primary' :
                       receipt.method === 'cheque' ? 'badge-warning' :
                       'badge-info';
    
    return `
      <tr>
        <td><span class="text-muted">${receipt.id.substring(0, 8)}</span></td>
        <td>${receipt.date}</td>
        <td>
          <span class="cursor-pointer text-primary" 
                onclick="openCustomerModal('${receipt.customerId}')">
            ${escapeHtml(customer?.name || 'Unknown')}
          </span>
        </td>
        <td>${escapeHtml(project?.name || 'Unknown')}</td>
        <td class="text-success font-semibold">${formatCurrency(receipt.amount)}</td>
        <td>
          <span class="badge ${methodBadge}">
            ${receipt.method.replace('_', ' ').toUpperCase()}
          </span>
        </td>
        <td>${escapeHtml(receipt.reference || '-')}</td>
        <td>
          <div class="btn-group">
            <button class="action-btn btn-danger" 
                    onclick="deleteReceipt('${receipt.id}')">
              Delete
            </button>
          </div>
        </td>
      </tr>
    `;
  }).join('');
  
  tbody.innerHTML = html || `
    <tr>
      <td colspan="8" style="text-align: center; color: var(--gray-400); padding: 40px;">
        No receipts found
      </td>
    </tr>
  `;
  
  // Render pagination
  renderPagination(pagination, current, totalPages, 'receipts');
}

function renderPagination(container, currentPage, totalPages, type) {
  if (!container) return;
  
  if (totalPages <= 1) {
    container.innerHTML = '';
    return;
  }
  
  let html = '<div class="btn-group">';
  
  // Previous button
  html += `
    <button class="btn btn-sm ${currentPage === 1 ? 'btn-secondary' : 'btn-primary'}" 
            ${currentPage === 1 ? 'disabled' : `onclick="changePage('${type}', ${currentPage - 1})"`}>
      ‚Üê Previous
    </button>
  `;
  
  // Page numbers
  const maxVisible = 5;
  let startPage = Math.max(1, currentPage - Math.floor(maxVisible / 2));
  let endPage = Math.min(totalPages, startPage + maxVisible - 1);
  
  if (endPage - startPage + 1 < maxVisible) {
    startPage = Math.max(1, endPage - maxVisible + 1);
  }
  
  for (let i = startPage; i <= endPage; i++) {
    html += `
      <button class="btn btn-sm ${i === currentPage ? 'btn-primary' : 'btn-secondary'}" 
              onclick="changePage('${type}', ${i})">
        ${i}
      </button>
    `;
  }
  
  // Next button
  html += `
    <button class="btn btn-sm ${currentPage === totalPages ? 'btn-secondary' : 'btn-primary'}" 
            ${currentPage === totalPages ? 'disabled' : `onclick="changePage('${type}', ${currentPage + 1})"`}>
      Next ‚Üí
    </button>
  `;
  
  html += '</div>';
  container.innerHTML = html;
}

function changePage(type, page) {
  currentPage[type] = page;
  refreshSection(type);
}

// Form Functions
function toggleContactSelection() {
  try {
    const contactType = document.getElementById('intContactType');
    if (!contactType) {
      console.error('Contact type element not found');
      return;
    }
    
    const value = contactType.value || 'customer';
    console.log('Toggling contact selection to:', value);
    
    const customerGroup = document.getElementById('customerSelectGroup');
    const brokerGroup = document.getElementById('brokerSelectGroup');
    
    if (customerGroup && brokerGroup) {
      customerGroup.style.display = value === 'customer' ? 'flex' : 'none';
      brokerGroup.style.display = value === 'broker' ? 'flex' : 'none';
      console.log('Contact groups toggled successfully');
    } else {
      console.error('Contact group elements not found');
    }
  } catch (error) {
    console.error('Error in toggleContactSelection:', error);
  }
}

function recalcSale() {
  const marlas = parseFloat(document.getElementById('marlas').value) || 0;
  const rate = parseFloat(document.getElementById('rate').value) || 0;
  const sale = marlas * rate;
  document.getElementById('sale').value = sale.toFixed(2);
}

function loadProjectsForReceipt() {
  const customerId = document.getElementById('recCust').value;
  const projectSelect = document.getElementById('recProj');
  const installmentSelect = document.getElementById('installmentSelect');
  
  const projects = db.projects.filter(p => p.customerId === customerId && p.status === 'active');
  
  projectSelect.innerHTML = projects.map(p => {
    const balance = p.sale - (p.received || 0);
    return `<option value="${p.id}">${escapeHtml(p.name)} - ${escapeHtml(p.unit)} (Balance: ${formatCurrency(balance)})</option>`;
  }).join('');
  
  // Load installments for first project
  if (projects.length > 0) {
    loadInstallmentsForProject(projects[0].id);
  } else {
    installmentSelect.innerHTML = '<option value="">Auto-allocate</option>';
  }
}

function loadInstallmentsForProject(projectId) {
  const project = db.projects.find(p => p.id === projectId);
  const installmentSelect = document.getElementById('installmentSelect');
  
  if (!project || !project.installments) {
    installmentSelect.innerHTML = '<option value="">Auto-allocate</option>';
    return;
  }
  
  const installments = project.installments
    .filter(i => !i.paid)
    .map(i => {
      const remaining = i.amount - (i.partialPaid || 0);
      return `<option value="${i.id}">Installment ${i.number} - Due: ${i.dueDate} (${formatCurrency(remaining)} remaining)</option>`;
    });
  
  installmentSelect.innerHTML = '<option value="">Auto-allocate</option>' + installments.join('');
}

function populateSelects() {
  const customers = db.customers.filter(c => c.type === 'customer' || c.type === 'both');
  const brokers = db.customers.filter(c => c.type === 'broker' || c.type === 'both');
  
  const customerOptions = customers.map(c => 
    `<option value="${c.id}">${escapeHtml(c.name)} - ${escapeHtml(c.phone)}</option>`
  ).join('');
  
  const brokerOptions = brokers.map(b => 
    `<option value="${b.id}">${escapeHtml(b.name)} - ${escapeHtml(b.phone)}</option>`
  ).join('');
  
  // Update all customer selects
  ['projCust', 'intCust', 'recCust'].forEach(id => {
    const select = document.getElementById(id);
    if (select) {
      select.innerHTML = customerOptions;
    }
  });
  
  // Update broker selects
  const projBrokerSelect = document.getElementById('projBroker');
  if (projBrokerSelect) {
    projBrokerSelect.innerHTML = '<option value="">Select Broker</option>' + brokerOptions;
  }
  
  const intBrokerSelect = document.getElementById('intBroker');
  if (intBrokerSelect) {
    intBrokerSelect.innerHTML = '<option value="">Select Broker</option>' + brokerOptions;
  }
}

// Modal Functions
function openAddCustomerModal() {
  document.getElementById('addCustomerModal').classList.add('show');
}

function closeAddCustomerModal() {
  document.getElementById('addCustomerModal').classList.remove('show');
  document.getElementById('customerForm').reset();
}

